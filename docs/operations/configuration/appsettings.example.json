{
  "ConnectionStrings": {
    "CosmosDb": "AccountEndpoint=https://[account-name].documents.azure.com:443/;AccountKey=[key];"
  },
  "Caching": {
    "Enabled": true,
    "ConnectionString": "[redis-connection-string]",
    "InstanceName": "Mystira:",
    "KeyPrefix": "mystira:",
    "DefaultSlidingExpirationMinutes": 30,
    "DefaultAbsoluteExpirationMinutes": 60,
    "EnableWriteThrough": true,
    "EnableInvalidationOnChange": true
  },
  "Migration": {
    "Phase": "CosmosOnly",
    "DualWriteTimeoutMs": 5000,
    "EnableCompensation": false,
    "EnableConsistencyValidation": false
  },
  "PolyglotPersistence": {
    "Enabled": false,
    "Phase": "CosmosOnly",
    "PrimaryConnectionString": "[cosmos-connection-string]",
    "SecondaryConnectionString": "[postgres-connection-string]",
    "DualWriteTimeoutMs": 5000,
    "EnableCompensation": false
  },
  "JwtSettings": {
    "Issuer": "https://mystira.app",
    "Audience": "https://mystira.app",
    "RsaPublicKey": "[RSA public key from Key Vault]",
    "RsaPrivateKey": "[RSA private key from Key Vault - for token signing]",
    "JwksEndpoint": "[optional JWKS endpoint URL]",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 30
  },
  "AzureBlobStorage": {
    "ConnectionString": "[storage-connection-string]",
    "MediaContainer": "media-assets",
    "ThumbnailContainer": "thumbnails"
  },
  "AzureCommunicationServices": {
    "ConnectionString": "[acs-connection-string]",
    "SenderEmail": "noreply@mystira.app"
  },
  "Discord": {
    "Enabled": false,
    "BotToken": "[discord-bot-token]",
    "ApplicationId": "[discord-application-id]"
  },
  "ChainService": {
    "GrpcEndpoint": "https://chain.mystira.app",
    "ApiKey": "[chain-service-api-key]",
    "TimeoutSeconds": 30,
    "WipTokenAddress": "0x...",
    "LicenseRegistryAddress": "0x..."
  },
  "CorsSettings": {
    "AllowedOrigins": "https://mystira.app,https://dev.mystira.app"
  },
  "InitializeDatabaseOnStartup": true,
  "SeedMasterDataOnStartup": false,
  "RequestLogging": {
    "Enabled": true,
    "LogRequestBody": false,
    "LogResponseBody": false,
    "ExcludePaths": ["/health", "/health/live", "/health/ready"]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "ApplicationInsights",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "ApplicationInsights": {
    "ConnectionString": "[app-insights-connection-string]"
  }
}
