#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

## husky task runner examples -------------------
## Note : for local installation use 'dotnet' prefix. e.g. 'dotnet husky'

## run all tasks
#husky run

### run all tasks with group: 'group-name'
#husky run --group group-name

## run task with name: 'task-name'
#husky run --name task-name

## pass hook arguments to task
#husky run --args "$1" "$2"

## or put your custom commands -------------------
#echo 'Husky.Net is awesome!'

dotnet format --verbosity quiet --no-restore

# Build Mystira DevHub Tauri app before commit
echo "Building Mystira DevHub..."
cd tools/Mystira.DevHub && npm run build
if [ $? -ne 0 ]; then
  echo "❌ DevHub build failed! Please fix the errors before committing."
  exit 1
fi
echo "✅ DevHub build successful!"
cd ../..
