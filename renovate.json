{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": ["dev"],
  "labels": ["dependencies"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "matchManagers": ["nuget"],
      "matchPackageNames": ["Mystira.Shared", "Mystira.Contracts"],
      "enabled": false,
      "description": "Disable updates for internal Mystira packages managed separately"
    },
    {
      "matchManagers": ["nuget"],
      "matchPackagePatterns": ["^Mystira\\.App\\."],
      "groupName": "Mystira.App internal packages",
      "enabled": false,
      "description": "Disable updates for internal Mystira.App packages"
    },
    {
      "matchManagers": ["nuget"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false
    }
  ]
}
