<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <!-- Public packages (restore only) -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    <!-- Private packages (restore + publish) -->
    <add key="github" value="https://nuget.pkg.github.com/phoenixvc/index.json" />
  </packageSources>

  <!-- Publish ONLY to GitHub Packages -->
  <config>
    <add key="defaultPushSource" value="https://nuget.pkg.github.com/phoenixvc/index.json" />
  </config>

  <!-- GitHub Packages authentication (uses GH_PACKAGES_TOKEN env var) -->
  <packageSourceCredentials>
    <github>
      <add key="Username" value="phoenixvc" />
      <add key="ClearTextPassword" value="%GH_PACKAGES_TOKEN%" />
    </github>
  </packageSourceCredentials>

  <!-- Package source mapping - ensures your packages only come from/go to GitHub -->
  <packageSourceMapping>
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
    <packageSource key="github">
      <package pattern="Mystira.*" />
      <package pattern="PhoenixVC.*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
