{
  "ConnectionStrings": {
    "MystiraApiBaseUrl": "https://api.mystira.app/"
  },
  "ApiConfiguration": {
    "DefaultApiBaseUrl": "https://api.mystira.app/",
    "AdminApiBaseUrl": "https://admin.mystira.app/",
    "Environment": "Production",
    "AvailableEndpoints": [
      { "name": "Production", "url": "https://api.mystira.app/", "environment": "prod" },
      { "name": "Staging", "url": "https://api.staging.mystira.app/", "environment": "staging" },
      { "name": "Development", "url": "https://api.dev.mystira.app/", "environment": "dev" }
    ],
    "AllowEndpointSwitching": false,
    "PersistEndpointChoice": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Components.WebAssembly": "Warning"
    }
  },
  "PWA": {
    "Name": "Mystira",
    "ShortName": "Mystira",
    "Description": "Dynamic Stories for Young Adventurers",
    "ThemeColor": "#8B5CF6",
    "BackgroundColor": "#1F2937"
  }
}
