@using Mystira.App.PWA.Services
@inherits LayoutComponentBase

<div class="page">
    <!-- Offline Indicator -->
    <div id="offline-indicator" class="offline-indicator" style="display: none;">
        <i class="fas fa-wifi me-2"></i>
        You are currently offline. Some features may be limited.
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-dragon me-2"></i>
                Mystira
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home me-1"></i>
                            Home
                        </a>
                    </li>
                    @if (CurrentGameSession != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-success">
                                <i class="fas fa-play-circle me-1"></i>
                                @CurrentGameSession.ScenarioName
                            </span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1">
        @Body
    </main>

    <!-- PWA Install Prompt -->
    <div id="install-prompt" class="install-prompt" style="display: none;">
        <button id="install-button" class="btn btn-install" onclick="installPWA()">
            <i class="fas fa-download me-2"></i>
            Install App
        </button>
    </div>

    <!-- Footer -->
    <footer class="bg-light py-3 mt-4">
        <div class="container-fluid text-center">
            <small class="text-muted">
                Mystira v1.0 - 
                <span id="connection-status" class="text-success">Online</span>
            </small>
        </div>
    </footer>
</div>

@code {
    [Inject] private IGameSessionService GameSessionService { get; set; } = default!;
    
    private GameSession? CurrentGameSession { get; set; }

    protected override void OnInitialized()
    {
        // Subscribe to game session changes
        GameSessionService.GameSessionChanged += OnGameSessionChanged;
        CurrentGameSession = GameSessionService.CurrentGameSession;
    }

    private void OnGameSessionChanged(object? sender, GameSession? gameSession)
    {
        CurrentGameSession = gameSession;
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        GameSessionService.GameSessionChanged -= OnGameSessionChanged;
    }
}

<script>
    // Connection status monitoring
    function updateConnectionStatus() {
        const statusElement = document.getElementById('connection-status');
        const offlineIndicator = document.getElementById('offline-indicator');
        
        if (navigator.onLine) {
            if (statusElement) statusElement.textContent = 'Online';
            if (statusElement) statusElement.className = 'text-success';
            if (offlineIndicator) offlineIndicator.style.display = 'none';
        } else {
            if (statusElement) statusElement.textContent = 'Offline';
            if (statusElement) statusElement.className = 'text-warning';
            if (offlineIndicator) offlineIndicator.style.display = 'block';
        }
    }

    // Monitor connection status
    window.addEventListener('online', updateConnectionStatus);
    window.addEventListener('offline', updateConnectionStatus);
    
    // Initial status check
    document.addEventListener('DOMContentLoaded', updateConnectionStatus);
</script>
