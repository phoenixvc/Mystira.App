@page "/game"
@using Mystira.App.PWA.Components

<PageTitle>@GetPageTitle()</PageTitle>

@if (gameSession == null || gameSession.CurrentScene == null)
{
    <div class="container-fluid py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card border-0 shadow">
                    <div class="card-body p-5 text-center">
                        <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                        <h3>No Active Adventure</h3>
                        <p class="text-muted mb-4">
                            You don't have an active adventure. Please select an adventure from the home page.
                        </p>
                        <a href="/" class="btn btn-primary-custom btn-lg">
                            <i class="fas fa-home me-2"></i>
                            Go to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid py-4 game-session-page-container">
        <div class="row">
            <div class="col-12">
                <div class="game-session-header">
                    <div class="game-session-title-area">
                        <h2 class="game-session-title">
                            @gameSession.Scenario.Title
                        </h2>
                    </div>
                    <div class="game-session-controls">
                        @if (GameSessionService.IsPaused)
                        {
                            <button class="btn-game-control btn-resume" @onclick="ResumeGame" disabled="@isProcessing">
                                <i class="fas fa-play"></i>
                                <span>Resume</span>
                            </button>
                        }
                        else
                        {
                            <button class="btn-game-control btn-pause" @onclick="PauseGame" disabled="@isProcessing">
                                <i class="fas fa-pause"></i>
                                <span>Pause</span>
                            </button>
                        }
                        <button class="btn-game-control btn-exit" @onclick="ExitAdventure" disabled="@isProcessing">
                            <i class="fas fa-door-open"></i>
                            <span>Exit Adventure</span>
                        </button>
                        <button class="btn-game-control btn-music-toggle" @onclick="ToggleMusic" disabled="@isProcessing" title="@(isMusicPaused ? "Resume Music" : "Pause Music")">
                            <i class="fas @(isMusicPaused ? "fa-volume-mute" : "fa-music")"></i>
                        </button>
                        <img src="images/mystira-logo.webp"
                            alt="Mystira Logo"
                            width="80"
                            height="80"
                            class="mystira-logo" />
                    </div>
                </div>
            </div>

            <!-- Scene Content -->
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="scene-content">

                        <!-- Media Display -->
                        @if (!string.IsNullOrWhiteSpace(gameSession.CurrentScene.ImageUrl) ||
                             !string.IsNullOrWhiteSpace(gameSession.CurrentScene.VideoUrl) ||
                             !string.IsNullOrWhiteSpace(gameSession.CurrentScene.AudioUrl))
                        {
                            <div class="media-container mb-4">
                                @if (!string.IsNullOrWhiteSpace(gameSession.CurrentScene.ImageUrl))
                                {
                                    <FantasyMediaFrame MediaKind="image" Color="#165668" Rounded="true" Pulse="true">
                                        <div class="image-overlay-container">
                                            <img src="@gameSession.CurrentScene.ImageUrl"
                                                 alt="Scene media"
                                                 @key="gameSession.CurrentScene.ImageUrl"
                                                 class="img-fluid" />

                                            @if (!string.IsNullOrWhiteSpace(gameSession.CurrentScene.AudioUrl))
                                            {
                                                <button type="button"
                                                        class="btn-audio-overlay @(isPlayingAudio == gameSession.CurrentScene.AudioUrl ? "playing" : "")"
                                                        @onclick="() => PlayAudio(gameSession.CurrentScene.AudioUrl)"
                                                        title="@(isPlayingAudio == gameSession.CurrentScene.AudioUrl ? "Stop audio" : "Play audio")">
                                                    <i class="fa-solid @(isPlayingAudio == gameSession.CurrentScene.AudioUrl ? "fa-pause" : "fa-volume-high")"></i>
                                                </button>
                                            }
                                        </div>
                                    </FantasyMediaFrame>
                                }
                                else if (!string.IsNullOrWhiteSpace(gameSession.CurrentScene.VideoUrl))
                                {
                                    <FantasyMediaFrame MediaKind="video" Color="#165668" Rounded="true" Pulse="true">
                                        <video controls class="w-100" @key="gameSession.CurrentScene.VideoUrl"
                                               @onplay="() => HandleMediaAction(true)"
                                               @onpause="() => HandleMediaAction(false)"
                                               @onended="() => HandleMediaAction(false)">
                                            <source src="@gameSession.CurrentScene.VideoUrl" type="video/mp4">
                                            Your browser does not support the video tag.
                                        </video>
                                    </FantasyMediaFrame>
                                }

                                @if (!string.IsNullOrWhiteSpace(gameSession.CurrentScene.AudioUrl) &&
                                     string.IsNullOrWhiteSpace(gameSession.CurrentScene.ImageUrl) &&
                                     string.IsNullOrWhiteSpace(gameSession.CurrentScene.VideoUrl))
                                {
                                    <FantasyMediaFrame MediaKind="audio" Color="#165668" Rounded="true" Pulse="true">
                                        <div class="p-4 bg-dark text-center">
                                            <i class="fas fa-music fa-2x text-white mb-3"></i>
                                            <audio controls class="w-100" @key="gameSession.CurrentScene.AudioUrl"
                                                   @onplay="() => HandleMediaAction(true)"
                                                   @onpause="() => HandleMediaAction(false)"
                                                   @onended="() => HandleMediaAction(false)">
                                                <source src="@gameSession.CurrentScene.AudioUrl" type="audio/mpeg">
                                                Your browser does not support the audio element.
                                            </audio>
                                        </div>
                                    </FantasyMediaFrame>
                                }
                            </div>
                        }

                        <!-- Scene Story -->
                        <div class="mb-4">
                            <div class="lead">
                                <MarkdownRenderer Content="@gameSession.CurrentScene.Content" />
                            </div>
                        </div>

                        <!-- Scene Type Specific Content -->
                        @if (gameSession.CurrentScene.SceneType == SceneType.Choice && gameSession.CurrentScene.Choices.Any())
                        {
                            <!-- Choice Scene -->
                            <div class="text-center">
                                <h5 class="mb-4 text-muted">What do you choose?</h5>

                                <div class="d-flex flex-row flex-wrap justify-content-center gap-3">
                                    @foreach (var choice in gameSession.CurrentScene.Choices.OrderBy(c => c.Order))
                                    {
                                        <button class="btn btn-primary-custom btn-lg choice-button"
                                                @onclick="() => HandleChoice(choice)"
                                                disabled="@isProcessing">
                                            @if (isProcessing)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                            }
                                            <MarkdownRenderer Content="@choice.Text" />
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                        else if (gameSession.CurrentScene.SceneType == SceneType.Roll)
                        {
                            <!-- Roll Scene -->
                            <div class="text-center">
                                @if (!rollResult.HasValue)
                                {
                                    if (gameSession.Scenario.AgeGroup != "1-2")
                                    {
                                        <h5 class="mb-4 text-muted">Time to test your luck!</h5>
                                        <p class="mb-4">You need to roll @gameSession.CurrentScene.RollTarget or higher.</p>
                                    }
                                    <div class="dice-roller-container">
                                        <DiceRoller DiceCount="1" Faces="20" SoundOn="true" HapticsOn="true" DarkMode="false"
                                                    RollDurationMs="1500" WaitAfterRollDuration="500" OnRollResult="HandleRollResult"/>
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-4">
                                        <h3 class="text-primary-custom mb-2">
                                            <i class="fas fa-dice me-2"></i>
                                            You rolled: @rollResult
                                        </h3>
                                        <div class="alert @((lastRollSuccess ?? (rollResult >= gameSession.CurrentScene.RollTarget)) ? "alert-success" : "alert-warning")">
                                            @{
                                                // Use cached outcome/message to avoid flicker changes on re-render
                                                bool isSuccess = lastRollSuccess ?? (rollResult >= gameSession.CurrentScene.RollTarget);
                                                string resultMessage = lastRollMessage ?? (isSuccess ? "Success!" : "Fail!");
                                            }

                                            @if (isSuccess)
                                            {
                                                <h5 class="mb-2">@resultMessage</h5>
                                                <div class="mb-0">
                                                    <MarkdownRenderer Content="@gameSession.CurrentScene.SuccessBranch" />
                                                </div>
                                            }
                                            else
                                            {
                                                <h5 class="mb-2">@resultMessage</h5>
                                                <div class="mb-0">
                                                    <MarkdownRenderer Content="@gameSession.CurrentScene.FailureBranch" />
                                                </div>
                                            }
                                        </div>

                                    </div>

                                    <button class="btn btn-primary-custom btn-lg mb-2"
                                            @onclick="ContinueFromRoll"
                                            disabled="@isProcessing">
                                        @if (isProcessing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        Continue Adventure
                                    </button>
                                }
                            </div>
                        }
                        else if (gameSession.IsCompleted || gameSession.CurrentScene.NextSceneId == null)
                        {
                            <!-- Final Scene (no more scenes to go to) -->
                            <div class="text-center">
                                <div class="alert alert-success">
                                    <h4 class="alert-heading">
                                        <i class="fas fa-trophy me-2"></i>
                                        Adventure Complete!
                                    </h4>
                                    <p class="mb-0">Congratulations on completing this adventure!</p>
                                </div>

                                <div class="mt-4">
                                    <button class="btn btn-primary-custom btn-lg" @onclick="FinishAdventure" disabled="@isProcessing">
                                        @if (isProcessing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="fas fa-flag-checkered me-2"></i>
                                        }
                                        Finish Adventure
                                    </button>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- Story Scene - just continue -->
                            <div class="text-center">
                                <button class="btn btn-primary-custom btn-lg mb-2"
                                        @onclick="ContinueStory"
                                        disabled="@isProcessing">
                                    @if (isProcessing)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    Continue
                                </button>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (showAwardsModal && finalizeResult != null)
    {
        <div class="awards-modal-overlay">
            <div class="card shadow-lg awards-modal-card">
                <div class="card-body p-4 awards-modal-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-award fa-4x text-warning mb-3"></i>
                        @{
                            var anyBadgesEarned = finalizeResult.Awards.Any(a => a.NewBadges != null && a.NewBadges.Count > 0);
                        }
                        @if (anyBadgesEarned)
                        {
                            <h3 class="mb-1">Congratulations!</h3>
                            <p class="text-muted mb-0">You've earned new badges for this adventure.</p>
                        }
                        else
                        {
                            <h3 class="mb-1">No badges earned this time</h3>
                            <p class="text-muted mb-0">Not every adventure grants a badge. Check the notes below to see why, and try another adventure!</p>
                        }
                    </div>

                    @foreach (var award in finalizeResult.Awards)
                    {
                        if (award.NewBadges == null || award.NewBadges.Count == 0) { continue; }
                        <div class="mb-4">
                            <div class="d-flex flex-row flex-wrap gap-4 justify-content-center">
                                @foreach (var badge in award.NewBadges)
                                {
                                    <div class="d-flex flex-column align-items-center gap-2 p-3 rounded badge-award-item" style="background-color:#f8f9fa; flex: 0 1 auto; max-width: 150px;">
                                        @if (!string.IsNullOrWhiteSpace(badge.ImageId))
                                        {
                                            <img src="@ApiClient.GetBadgeImageUrl(badge.ImageId!)"
                                                 alt="@badge.BadgeName"
                                                 loading="lazy"
                                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='inline-block'"
                                                 style="width:80px;height:80px;object-fit:cover;border-radius:12px;" />
                                            <i class="fas fa-certificate text-warning" style="display:none; font-size:64px;"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-certificate text-warning" style="font-size:64px;"></i>
                                        }
                                        <div class="text-center">
                                            <div class="fw-semibold small">@badge.BadgeName</div>
                                            @if (!string.IsNullOrWhiteSpace(award.ProfileName))
                                            {
                                                <div class="text-muted" style="font-size: 0.8rem;">@award.ProfileName</div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    @if (outOfAgeGroupNoBadges.Count > 0)
                    {
                        <div class="alert alert-warning mt-2" role="alert">
                            <div class="fw-semibold mb-1">No badges could be awarded for:</div>
                            <div class="mb-2">@string.Join(", ", outOfAgeGroupNoBadges)</div>
                            <div class="mb-0">They weren’t in the right age group for this adventure, so badges can’t be awarded.</div>
                        </div>
                    }
                    @if (alreadyPlayedNoBadges.Count > 0)
                    {
                        <div class="alert alert-info mt-2" role="alert">
                            <div class="fw-semibold mb-1">No badges this time:</div>
                            <div class="mb-2">@string.Join(", ", alreadyPlayedNoBadges)</div>
                            <div class="mb-0">They couldn’t get a badge as they have already played this story</div>
                        </div>
                    }
                    @if (otherNoBadges.Count > 0)
                    {
                        <div class="alert alert-info mt-2" role="alert">
                            <div class="fw-semibold mb-1">No badges this time:</div>
                            <div class="mb-2">@string.Join(", ", otherNoBadges)</div>
                            <div class="mb-0">They didn’t necessarily make a bad choice — and that’s okay! It’s often not possible for all players to get a badge in a single round. Don’t be discouraged; try another adventure.</div>
                        </div>
                    }

                    <div class="text-center mt-2">
                        <div class="text-muted">
                            Visit the <a href="/achievements">Achievements</a> page for more details.
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button class="btn btn-primary-custom btn-lg" @onclick="CloseAwardsAndExit">
                            <i class="fas fa-check me-2"></i>
                            Continue
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@implements IAsyncDisposable
@code {
    [Inject] private IGameSessionService GameSessionService { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private ILogger<GameSessionPage> Logger { get; set; } = default!;
    [Inject] private IApiClient ApiClient { get; set; } = default!;
    [Inject] private IAwardsState AwardsState { get; set; } = default!;
    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;
    [Inject] private Mystira.App.PWA.Services.Music.SceneAudioOrchestrator AudioOrchestrator { get; set; } = default!;
    [Inject] private Mystira.App.PWA.Services.Music.IAudioBus AudioBus { get; set; } = default!;

    private sealed record PlayerOption(string Id, string DisplayName);

    private GameSession? gameSession;
    private bool isProcessing = false;
    private int? rollResult = null;
    private bool? lastRollSuccess = null;
    private string? lastRollMessage = null;
    private bool hasNavigatedHome = false;
    private bool isMusicPaused = false;

    // Audio
    private string? isPlayingAudio = null;
    private IJSObjectReference? audioModule;

    // Awards modal state
    private bool showAwardsModal = false;
    private FinalizeSessionResponse? finalizeResult;
    private List<string> outOfAgeGroupNoBadges = new();
    private List<string> alreadyPlayedNoBadges = new();
    private List<string> otherNoBadges = new();
    private string? _noBadgeBucketsComputedForSessionId;

    // In-session out-of-age warning state (computed once per session)
    private List<string> outOfAgeAssignedPlayers = new();
    private string? _outOfAgeAssignedComputedForSessionId;

    private List<PlayerOption> playerOptions = new();
    private string? selectedPlayerId;

    protected override void OnInitialized()
    {
        // Get current game session
        gameSession = GameSessionService.CurrentGameSession;
        BuildPlayerOptions(gameSession);

        // Precompute out-of-age assigned players once per session
        if (gameSession != null && _outOfAgeAssignedComputedForSessionId != gameSession.Id)
        {
            _ = InvokeAsync(async () =>
            {
                try
                {
                    await PrecomputeOutOfAgeAssignedAsync();
                    StateHasChanged();
                }
                catch (Exception ex)
                {
                    Logger.LogWarning(ex, "Failed to precompute out-of-age assigned players (OnInitialized)");
                }
            });
        }

        // Subscribe to changes
        GameSessionService.GameSessionChanged += OnGameSessionChanged;

        // If no game session, redirect to home
        // if (gameSession == null)
        // {
        //     Logger.LogWarning("No active game session found, redirecting to home");
        //     Navigation.NavigateTo("/");
        // }
    }

    private void OnGameSessionChanged(object? sender, GameSession? session)
    {
        gameSession = session;
        BuildPlayerOptions(session);
        // Reset roll-related state when scene changes
        rollResult = null;
        lastRollSuccess = null;
        lastRollMessage = null;

        // When the session is marked completed, allow the page to render the
        // Finish flow (button + modal). Do not auto-navigate away here.

        // Recompute out-of-age assigned players if session id changed
        if (session != null && _outOfAgeAssignedComputedForSessionId != session.Id)
        {
            _outOfAgeAssignedComputedForSessionId = null;
            _ = InvokeAsync(async () =>
            {
                try
                {
                    await PrecomputeOutOfAgeAssignedAsync();
                    StateHasChanged();
                }
                catch (Exception ex)
                {
                    Logger.LogWarning(ex, "Failed to precompute out-of-age assigned players (OnGameSessionChanged)");
                }
            });
        }

        InvokeAsync(StateHasChanged);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                audioModule = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "./js/audioPlayer.js");
                isMusicPaused = await AudioBus.IsMusicPausedAsync();
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error loading audio module");
            }
        }

        // When the awards modal is visible and we have a finalize payload,
        // precompute triage buckets once per session id (no await in render blocks)
        if (showAwardsModal && finalizeResult != null && _noBadgeBucketsComputedForSessionId != finalizeResult.SessionId)
        {
            try
            {
                await PrecomputeNoBadgeBucketsAsync();
                _noBadgeBucketsComputedForSessionId = finalizeResult.SessionId;
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Logger.LogWarning(ex, "Failed to precompute no-badge buckets for awards modal");
            }
        }
    }

    private async Task PlayAudio(string audioUrl)
    {
        try
        {
            if (isPlayingAudio == audioUrl)
            {
                await AudioBus.StopSoundEffectAsync(audioUrl);
                await AudioBus.DuckMusicAsync(false);
                isPlayingAudio = null;
            }
            else
            {
                if (!string.IsNullOrEmpty(isPlayingAudio))
                {
                    await AudioBus.StopSoundEffectAsync(isPlayingAudio);
                }

                await AudioBus.DuckMusicAsync(true);
                await AudioBus.PlaySoundEffectAsync(audioUrl);
                isPlayingAudio = audioUrl;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error playing audio: {AudioUrl}", audioUrl);
        }
        finally
        {
            StateHasChanged();
        }
    }

    public async ValueTask DisposeAsync()
    {
        try
        {
            if (audioModule != null)
            {
                await audioModule.InvokeVoidAsync("stopAudio");
                await audioModule.DisposeAsync();
            }

            await AudioOrchestrator.StopAllAsync();
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Error disposing audio module in GameSessionPage");
        }

        // Unsubscribe from events
        GameSessionService.GameSessionChanged -= OnGameSessionChanged;
    }

    private string GetPageTitle()
    {
        if (gameSession?.CurrentScene != null)
        {
            return $"{gameSession.CurrentScene.Title} - {gameSession.ScenarioName}";
        }
        return "Game Session • Mystira";
    }

    private void BuildPlayerOptions(GameSession? session)
    {
        playerOptions = new List<PlayerOption>();

        if (session == null)
        {
            selectedPlayerId = null;
            return;
        }

        void Add(string id, string displayName)
        {
            if (string.IsNullOrWhiteSpace(id) || playerOptions.Any(p => p.Id == id))
            {
                return;
            }

            playerOptions.Add(new PlayerOption(id, displayName));
        }

        if (!string.IsNullOrWhiteSpace(session.ProfileId))
        {
            Add(session.ProfileId, "Session Owner");
        }

        foreach (var assignment in session.CharacterAssignments)
        {
            var pa = assignment.PlayerAssignment;
            if (pa == null)
            {
                continue;
            }

            if (!string.IsNullOrWhiteSpace(pa.ProfileId))
            {
                Add(pa.ProfileId!, pa.ProfileName ?? assignment.CharacterName);
            }
            else if (!string.IsNullOrWhiteSpace(pa.GuestName))
            {
                Add($"guest:{pa.GuestName}", pa.GuestName!);
            }
        }

        if (string.IsNullOrWhiteSpace(selectedPlayerId) || playerOptions.All(p => p.Id != selectedPlayerId))
        {
            selectedPlayerId = playerOptions.FirstOrDefault()?.Id;
        }
    }

    private async Task PrecomputeOutOfAgeAssignedAsync()
    {
        outOfAgeAssignedPlayers.Clear();

        if (gameSession == null || string.IsNullOrWhiteSpace(gameSession.Id))
            return;

        // Avoid recomputing for the same session id
        if (_outOfAgeAssignedComputedForSessionId == gameSession.Id)
            return;

        var scenarioAgeGroup = gameSession.Scenario?.AgeGroup;
        if (string.IsNullOrWhiteSpace(scenarioAgeGroup))
        {
            _outOfAgeAssignedComputedForSessionId = gameSession.Id; // nothing to compute
            return;
        }

        // Collect assigned profileIds and display fallbacks
        var profileIdToDisplay = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase);

        if (!string.IsNullOrWhiteSpace(gameSession.ProfileId))
        {
            profileIdToDisplay[gameSession.ProfileId!] = "Session Owner";
        }

        foreach (var assignment in gameSession.CharacterAssignments)
        {
            var pa = assignment.PlayerAssignment;
            if (pa == null || string.IsNullOrWhiteSpace(pa.ProfileId)) continue;
            var display = !string.IsNullOrWhiteSpace(pa.ProfileName) ? pa.ProfileName! : assignment.CharacterName ?? "Player";
            profileIdToDisplay[pa.ProfileId!] = display;
        }

        if (profileIdToDisplay.Count == 0)
        {
            _outOfAgeAssignedComputedForSessionId = gameSession.Id;
            return;
        }

        // Fetch profiles and compare age groups
        foreach (var kvp in profileIdToDisplay.ToList())
        {
            var pid = kvp.Key;
            try
            {
                var p = await ApiClient.GetProfileByIdAsync(pid);
                if (p == null) continue;

                var matches = Mystira.App.PWA.Services.AgeGroupHelper.AgeGroupMatches(scenarioAgeGroup, p.AgeGroup);
                if (!matches)
                {
                    var displayName = string.IsNullOrWhiteSpace(p.Name) ? kvp.Value : p.Name;
                    outOfAgeAssignedPlayers.Add(displayName);
                }
            }
            catch (Exception ex)
            {
                Logger.LogWarning(ex, "Failed to fetch profile {ProfileId} for out-of-age computation", pid);
            }
        }

        outOfAgeAssignedPlayers = outOfAgeAssignedPlayers.Distinct().ToList();
        _outOfAgeAssignedComputedForSessionId = gameSession.Id;
    }

    private async Task HandleChoice(Choice choice)
    {
        if (gameSession?.CurrentScene == null || string.IsNullOrEmpty(choice.NextSceneId))
            return;

        try
        {
            isProcessing = true;
            StateHasChanged();

            Logger.LogInformation("Player chose: {ChoiceText} -> {NextScene}", choice.Text, choice.NextSceneId);

            var scene = gameSession.CurrentScene;
            string? playerId = null;

            // Map ActiveCharacter to the playerId of the assigned player
            if (!string.IsNullOrWhiteSpace(scene.ActiveCharacter))
            {
                var ac = scene.ActiveCharacter!;

                // Try to find matching character assignment by name or id (case-insensitive)
                var matches = gameSession.CharacterAssignments
                    .Where(ca =>
                        (!string.IsNullOrWhiteSpace(ca.CharacterName) &&
                         string.Equals(ca.CharacterName, ac, StringComparison.OrdinalIgnoreCase)) ||
                        (!string.IsNullOrWhiteSpace(ca.CharacterId) &&
                         string.Equals(ca.CharacterId, ac, StringComparison.OrdinalIgnoreCase)))
                    .ToList();

                if (matches.Count == 1)
                {
                    var pa = matches[0].PlayerAssignment;
                    if (pa != null)
                    {
                        // Prefer ProfileId when present, otherwise guest:{GuestName}
                        if (!string.IsNullOrWhiteSpace(pa.ProfileId))
                        {
                            playerId = pa.ProfileId;
                        }
                        else if (!string.IsNullOrWhiteSpace(pa.GuestName))
                        {
                            playerId = $"guest:{pa.GuestName}";
                        }
                    }
                }
                else if (matches.Count == 0)
                {
                    Logger.LogWarning("ActiveCharacter '{ActiveCharacter}' did not match any character assignment.", ac);
                }
                else
                {
                    Logger.LogWarning("ActiveCharacter '{ActiveCharacter}' matched multiple character assignments ({Count}). Using blank playerId.", ac, matches.Count);
                }
            }
            await GameSessionService.MakeChoiceAsync(
                gameSession.Id,
                gameSession.CurrentScene.Id,
                choice.Text,
                choice.NextSceneId,
                playerId,
                choice.CompassAxis,
                choice.CompassDirection,
                choice.CompassDelta);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error handling choice: {ChoiceText}", choice.Text);
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

