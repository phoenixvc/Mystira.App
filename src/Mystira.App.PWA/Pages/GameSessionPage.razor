@page "/game"
@using Mystira.App.PWA.Components
@using Mystira.App.PWA.Services
@using Mystira.App.PWA.Models

<PageTitle>@GetPageTitle()</PageTitle>

<style>
    /* Fantasy font for headers */
    .fantasy-title {
        font-family: 'Cinzel', 'Cormorant Garamond', serif;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }
    
    /* Layout zones */
    .scene-header {
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(139, 92, 246, 0.05));
        border-bottom: 2px solid var(--primary-color);
        padding: 1rem 0;
        margin-bottom: 1rem;
    }
    
    .media-area {
        max-height: 35vh;
        background: #f8f9fa;
        border-radius: 1rem;
        overflow: hidden;
        margin-bottom: 1.5rem;
        position: relative;
    }
    
    .media-toggle {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        z-index: 10;
        background: rgba(0,0,0,0.7);
        color: white;
        border: none;
        border-radius: 0.5rem;
        padding: 0.5rem;
        cursor: pointer;
        font-size: 0.875rem;
    }
    
    .description-box {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 1rem;
        padding: 1.5rem;
        max-height: 50vh;
        overflow-y: auto;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .action-zone {
        background: linear-gradient(180deg, rgba(16, 185, 129, 0.05), rgba(16, 185, 129, 0.02));
        border: 1px solid rgba(16, 185, 129, 0.2);
        border-radius: 1rem;
        padding: 1.5rem;
        min-height: 120px;
    }
    
    .echo-compass-panel {
        background: rgba(139, 92, 246, 0.05);
        border: 1px solid rgba(139, 92, 246, 0.2);
        border-radius: 0.75rem;
        padding: 1rem;
        margin-top: 1rem;
        font-size: 0.875rem;
    }
    
    .compass-meter {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }
    
    .compass-axis {
        flex: 1;
        text-align: center;
    }
    
    .compass-label {
        font-size: 0.75rem;
        color: var(--muted, #6b7280);
        margin-bottom: 0.25rem;
    }
    
    .compass-value {
        font-weight: 600;
        color: var(--primary-color);
        font-size: 1.1rem;
    }
    
    .echo-list {
        max-height: 100px;
        overflow-y: auto;
        border: 1px solid rgba(139, 92, 246, 0.1);
        border-radius: 0.5rem;
        padding: 0.75rem;
        background: rgba(255, 255, 255, 0.5);
    }
    
    .echo-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(139, 92, 246, 0.1);
    }
    
    .echo-item:last-child {
        border-bottom: none;
    }
    
    .echo-type {
        font-weight: 500;
        color: var(--fg, #111827);
    }
    
    .echo-strength {
        background: var(--primary-color);
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 600;
    }
    
    .choice-button {
        display: block;
        width: 100%;
        max-width: 400px;
        margin: 0.5rem auto;
        padding: 1rem 1.5rem;
        background: linear-gradient(180deg, var(--accent, #22c55e), color-mix(in srgb, var(--accent, #22c55e) 82%, black));
        color: white;
        border: none;
        border-radius: 0.9rem;
        font-weight: 600;
        cursor: pointer;
        transition: transform .1s ease, filter .2s ease, box-shadow .2s ease;
        box-shadow: 0 6px 16px -10px var(--glow, rgba(52,211,153,0.35));
    }
    
    .choice-button:hover:not(:disabled) {
        filter: brightness(1.02);
        box-shadow: 0 10px 24px -12px var(--glow, rgba(52,211,153,0.35));
        transform: translateY(-1px);
    }
    
    .choice-button:disabled {
        opacity: .65;
        cursor: not-allowed;
    }
    
    .choice-button:active:not(:disabled) {
        transform: translateY(1px) scale(0.985);
    }
    
    .dice-roller-container {
        max-width: 200px;
        margin: 0 auto;
        padding: 1rem;
        background-color: var(--bs-body-bg, white);
        border-radius: 0.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    .media-container img,
    .media-container video {
        width: 100%;
        height: 100%;
        object-fit: contain;
        aspect-ratio: 16/9;
    }
    
    .media-container video {
        background: #000;
    }
    
    /* Mobile collapsible media */
    @@media (max-width: 768px) {
        .media-area.collapsed .media-container {
            height: 60px;
            overflow: hidden;
        }
        
        .media-area.collapsed .media-container img,
        .media-area.collapsed .media-container video {
            height: 60px;
            object-fit: cover;
        }
        
        .media-area:not(.collapsed) .media-toggle {
            top: auto;
            bottom: 0.5rem;
        }
    }
</style>

@if (gameSession == null || gameSession.CurrentScene == null)
{
    <div class="container-fluid py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card border-0 shadow">
                    <div class="card-body p-5">
                        <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                        <h3>No Active Adventure</h3>
                        <p class="text-muted mb-4">
                            You don't have an active adventure. Please select an adventure from the home page.
                        </p>
                        <a href="/" class="btn btn-primary-custom btn-lg">
                            <i class="fas fa-home me-2"></i>
                            Go to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="game-content">
        <!-- Header Bar - Scene title, navigation, fantasy font -->
        <div class="scene-header">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col">
                        <h1 class="fantasy-title text-primary-custom mb-0">@gameSession.CurrentScene.Title</h1>
                        <small class="text-muted">@gameSession.ScenarioName</small>
                    </div>
                    <div class="col-auto">
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-1"></i>
                            Exit
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    
                    <!-- Media Area - Optional image/audio/video tied to scene -->
                    @if (!string.IsNullOrEmpty(gameSession.CurrentScene.ImageUrl) || 
                         !string.IsNullOrEmpty(gameSession.CurrentScene.VideoUrl) ||
                         !string.IsNullOrEmpty(gameSession.CurrentScene.AudioUrl))
                    {
                        <div class="media-area" id="mediaArea">
                            <button class="media-toggle d-md-none" @onclick="ToggleMedia">
                                <i class="fas fa-@(mediaCollapsed ? "expand" : "compress")"></i>
                            </button>
                            <div class="media-container">
                                @if (!string.IsNullOrEmpty(gameSession.CurrentScene.ImageUrl))
                                {
                                    <img src="@gameSession.CurrentScene.ImageUrl" 
                                         alt="Scene media" />
                                }
                                else if (!string.IsNullOrEmpty(gameSession.CurrentScene.VideoUrl))
                                {
                                    <video autoplay muted loop playsinline class="w-100">
                                        <source src="@gameSession.CurrentScene.VideoUrl" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                }
                                
                                @if (!string.IsNullOrEmpty(gameSession.CurrentScene.AudioUrl))
                                {
                                    <div class="p-4 bg-dark text-center h-100 d-flex flex-column align-items-center justify-content-center">
                                        <i class="fas fa-music fa-2x text-white mb-3"></i>
                                        <audio controls class="w-100">
                                            <source src="@gameSession.CurrentScene.AudioUrl" type="audio/mpeg">
                                            Your browser does not support the audio element.
                                        </audio>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Description Box - Scene text, scrollable if long -->
                    <div class="description-box">
                        <p class="lead mb-0">@gameSession.CurrentScene.Content</p>
                    </div>

                    <!-- Action Zone - Choice buttons or dice mechanic, with optional echo/compass panel -->
                    <div class="action-zone">
                        @if (gameSession.CurrentScene.SceneType == SceneType.Choice && gameSession.CurrentScene.Choices.Any())
                        {
                            <!-- Choice Scene -->
                            <div class="text-center">
                                <h5 class="mb-3 text-muted">What do you choose?</h5>
                                <div class="d-flex flex-column align-items-center gap-2">
                                    @foreach (var choice in gameSession.CurrentScene.Choices.OrderBy(c => c.Order))
                                    {
                                        <button class="choice-button" 
                                                @onclick="() => HandleChoice(choice)"
                                                disabled="@isProcessing">
                                            @if (isProcessing)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                            }
                                            @choice.Text
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                        else if (gameSession.CurrentScene.SceneType == SceneType.Roll)
                        {
                            <!-- Roll Scene -->
                            <div class="text-center">
                                @if (!rollResult.HasValue)
                                {
                                    <h5 class="mb-3 text-muted">Time to test your luck!</h5>
                                    <p class="mb-3">You need to roll @gameSession.CurrentScene.RollTarget or higher.</p>
                                    <div class="dice-roller-container">
                                        <DiceRoller DiceCount="1" Faces="20" SoundOn="true" HapticsOn="true" DarkMode="false" 
                                                    RollDurationMs="1500" WaitAfterRollDuration="500" OnRollResult="HandleRollResult"/>
                                    </div>
                                }
                                else
                                {
                                    <div class="roll-result mb-3">
                                        <h3 class="text-primary-custom mb-2">
                                            <i class="fas fa-dice me-2"></i>
                                            You rolled: @rollResult
                                        </h3>
                                        <div class="alert @(rollResult >= gameSession.CurrentScene.RollTarget ? "alert-success" : "alert-warning")">
                                            @if (rollResult >= gameSession.CurrentScene.RollTarget)
                                            {
                                                <h5 class="mb-2">Success!</h5>
                                                <p class="mb-0">@gameSession.CurrentScene.SuccessBranch</p>
                                            }
                                            else
                                            {
                                                <h5 class="mb-2">Fail!</h5>
                                                <p class="mb-0">@gameSession.CurrentScene.FailureBranch</p>
                                            }
                                        </div>
                                    </div>

                                    <button class="btn btn-primary-custom btn-lg"
                                            @onclick="ContinueFromRoll"
                                            disabled="@isProcessing">
                                        @if (isProcessing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        Continue Adventure
                                    </button>
                                }
                            </div>
                        }
                        else if (gameSession.CurrentScene.SceneType == SceneType.Final)
                        {
                            <!-- Final Scene -->
                            <div class="text-center">
                                <div class="alert alert-success">
                                    <h4 class="alert-heading">
                                        <i class="fas fa-trophy me-2"></i>
                                        Adventure Complete!
                                    </h4>
                                    <p class="mb-0">Congratulations on completing this adventure!</p>
                                </div>
                                
                                <div class="mt-3">
                                    <button class="btn btn-primary-custom btn-lg" @onclick="FinishAdventure">
                                        <i class="fas fa-flag-checkered me-2"></i>
                                        Finish Adventure
                                    </button>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- Story Scene - just continue -->
                            <div class="text-center">
                                <button class="btn btn-primary-custom btn-lg" 
                                        @onclick="ContinueStory"
                                        disabled="@isProcessing">
                                    @if (isProcessing)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    Continue
                                </button>
                            </div>
                        }
                        
                        <!-- Echo/Compass Panel (placeholder for future implementation) -->
                        <div class="echo-compass-panel mt-3">
                            <h6 class="mb-3 text-muted">Character Development</h6>
                            
                            <div class="compass-meter">
                                <div class="compass-axis">
                                    <div class="compass-label">Bravery</div>
                                    <div class="compass-value">+2</div>
                                </div>
                                <div class="compass-axis">
                                    <div class="compass-label">Honesty</div>
                                    <div class="compass-value">+1</div>
                                </div>
                                <div class="compass-axis">
                                    <div class="compass-label">Kindness</div>
                                    <div class="compass-value">+3</div>
                                </div>
                            </div>
                            
                            <div class="echo-list mt-3">
                                <h6 class="mb-2 text-muted">Recent Echoes</h6>
                                <div class="echo-item">
                                    <span class="echo-type">Courage</span>
                                    <span class="echo-strength">Strong</span>
                                </div>
                                <div class="echo-item">
                                    <span class="echo-type">Trust</span>
                                    <span class="echo-strength">Medium</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    window.toggleMediaCollapse = function(isCollapsed) {
        const mediaArea = document.getElementById('mediaArea');
        if (mediaArea) {
            if (isCollapsed) {
                mediaArea.classList.add('collapsed');
            } else {
                mediaArea.classList.remove('collapsed');
            }
        }
    }
</script>

@code {
    [Inject] private IGameSessionService GameSessionService { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private ILogger<GameSessionPage> Logger { get; set; } = default!;
    [Inject] private IJSRuntime JS { get; set; } = default!;

    private GameSession? gameSession;
    private bool isProcessing = false;
    private int? rollResult = null;
    private bool mediaCollapsed = false;

    protected override void OnInitialized()
    {
        // Get current game session
        gameSession = GameSessionService.CurrentGameSession;
        
        // Subscribe to changes
        GameSessionService.GameSessionChanged += OnGameSessionChanged;
        
        // If no game session, redirect to home
        if (gameSession == null)
        {
            Logger.LogWarning("No active game session found, redirecting to home");
            Navigation.NavigateTo("/");
        }
    }

    private void OnGameSessionChanged(object? sender, GameSession? session)
    {
        gameSession = session;
        rollResult = null; // Reset roll result when scene changes
        InvokeAsync(StateHasChanged);
    }

    private string GetPageTitle()
    {
        if (gameSession?.CurrentScene != null)
        {
            return $"{gameSession.CurrentScene.Title} - {gameSession.ScenarioName}";
        }
        return "Game Session - Mystira";
    }

    private async Task HandleChoice(Choice choice)
    {
        if (isProcessing || string.IsNullOrEmpty(choice.NextSceneTitle))
            return;

        try
        {
            isProcessing = true;
            StateHasChanged();
            
            Logger.LogInformation("Player chose: {ChoiceText} -> {NextScene}", choice.Text, choice.NextSceneTitle);
            
            var success = await GameSessionService.NavigateToSceneAsync(choice.NextSceneTitle);
            if (!success)
            {
                Logger.LogError("Failed to navigate to scene: {NextScene}", choice.NextSceneTitle);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error handling choice: {ChoiceText}", choice.Text);
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task ContinueFromRoll()
    {
        if (isProcessing || gameSession?.CurrentScene == null || !rollResult.HasValue)
            return;

        try
        {
            isProcessing = true;
            StateHasChanged();
            
            // Determine if the roll was successful
            bool isSuccess = rollResult.Value >= (gameSession.CurrentScene.RollTarget ?? 0);
            
            Logger.LogInformation("Processing roll result: {RollResult}, Target: {Target}, Success: {IsSuccess}", 
                rollResult.Value, gameSession.CurrentScene.RollTarget, isSuccess);
            
            // Navigate based on success/failure
            var success = await GameSessionService.NavigateFromRollAsync(isSuccess);
            
            if (!success)
            {
                Logger.LogError("Failed to navigate from roll scene");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error continuing from roll");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task ContinueStory()
    {
        if (isProcessing)
            return;

        try
        {
            isProcessing = true;
            StateHasChanged();
            
            // For story scenes, advance to the next scene
            var success = await GameSessionService.GoToNextSceneAsync();
            if (!success)
            {
                Logger.LogError("Failed to advance to next scene");
            }
            
            Logger.LogInformation("Story scene advanced");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error continuing story");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        GameSessionService.GameSessionChanged -= OnGameSessionChanged;
    }

    private Task HandleRollResult(int arg)
    {
        rollResult = arg;

        return Task.CompletedTask;
    }

    private void FinishAdventure()
    {
        try
        {
            Logger.LogInformation("Finishing adventure and returning to main menu");
            
            // Clear the current game session
            GameSessionService.ClearGameSession();
            
            // Navigate back to home
            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error finishing adventure");
        }
    }

    private void ToggleMedia()
    {
        try
        {
            mediaCollapsed = !mediaCollapsed;
            StateHasChanged();
            
            // Add/remove collapsed class to media area
            _ = JS.InvokeVoidAsync("toggleMediaCollapse", mediaCollapsed);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error toggling media collapse");
        }
    }
}
