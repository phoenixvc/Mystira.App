@page "/game"

<PageTitle>@GetPageTitle()</PageTitle>

@if (gameSession == null || gameSession.CurrentScene == null)
{
    <div class="container-fluid py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="card border-0 shadow">
                    <div class="card-body p-5 text-center">
                        <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                        <h3>No Active Adventure</h3>
                        <p class="text-muted mb-4">
                            You don't have an active adventure. Please select an adventure from the home page.
                        </p>
                        <a href="/" class="btn btn-primary-custom btn-lg">
                            <i class="fas fa-home me-2"></i>
                            Go to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="game-session-header">
                    <div class="game-session-title-area">
                        <h2 class="game-session-title">
                            @gameSession.Scenario.Title
                        </h2>
                    </div>
                    <div class="game-session-controls">
                        @if (GameSessionService.IsPaused)
                        {
                            <button class="btn-game-control btn-resume" @onclick="ResumeGame" disabled="@isProcessing">
                                <i class="fas fa-play"></i>
                                <span>Resume</span>
                            </button>
                        }
                        else
                        {
                            <button class="btn-game-control btn-pause" @onclick="PauseGame" disabled="@isProcessing">
                                <i class="fas fa-pause"></i>
                                <span>Pause</span>
                            </button>
                        }
                        <button class="btn-game-control btn-exit" @onclick="ExitAdventure" disabled="@isProcessing">
                            <i class="fas fa-door-open"></i>
                            <span>Exit Adventure</span>
                        </button>
                        <img src="images/mystira-logo.webp"
                            alt="Mystira Logo"
                            width="80"
                            height="80"
                            class="mystira-logo" />
                    </div>
                </div>
            </div>

            <!-- Scene Content -->
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="scene-content">

                        <!-- Media Display -->
                        @if (!string.IsNullOrEmpty(gameSession.CurrentScene.ImageUrl) ||
                             !string.IsNullOrEmpty(gameSession.CurrentScene.VideoUrl) ||
                             !string.IsNullOrEmpty(gameSession.CurrentScene.AudioUrl))
                        {
                            <div class="media-container mb-4">
                                @if (!string.IsNullOrEmpty(gameSession.CurrentScene.ImageUrl))
                                {
                                    <img src="@gameSession.CurrentScene.ImageUrl"
                                         alt="Scene media"
                                         @key="gameSession.CurrentScene.ImageUrl"
                                         class="img-fluid rounded" />
                                }
                                else if (!string.IsNullOrEmpty(gameSession.CurrentScene.VideoUrl))
                                {
                                    <video controls class="w-100 rounded" @key="gameSession.CurrentScene.VideoUrl">
                                        <source src="@gameSession.CurrentScene.VideoUrl" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                }

                                @if (!string.IsNullOrEmpty(gameSession.CurrentScene.AudioUrl))
                                {
                                    <div class="p-4 bg-dark rounded text-center">
                                        <i class="fas fa-music fa-2x text-white mb-3"></i>
                                        <audio controls class="w-100" @key="gameSession.CurrentScene.AudioUrl">
                                            <source src="@gameSession.CurrentScene.AudioUrl" type="audio/mpeg">
                                            Your browser does not support the audio element.
                                        </audio>
                                    </div>
                                }
                            </div>
                        }

                        <!-- Scene Story -->
                        <div class="mb-4">
                            <div class="lead">
                                <MarkdownRenderer Content="@gameSession.CurrentScene.Content" />
                            </div>
                        </div>

                        <!-- Scene Type Specific Content -->
                        @if (gameSession.CurrentScene.SceneType == SceneType.Choice && gameSession.CurrentScene.Choices.Any())
                        {
                            <!-- Choice Scene -->
                            <div class="text-center">
                                <h5 class="mb-4 text-muted">What do you choose?</h5>

                                @if (playerOptions.Count > 1)
                                {
                                    <div class="mb-3 d-flex justify-content-center">
                                        <div style="max-width: 320px;">
                                            <label class="form-label text-muted">Who's choosing?</label>
                                            <select class="form-select" @bind="selectedPlayerId" disabled="@isProcessing">
                                                @foreach (var player in playerOptions)
                                                {
                                                    <option value="@player.Id">@player.DisplayName</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                }

                                <div class="d-flex flex-row flex-wrap justify-content-center gap-3">
                                    @foreach (var choice in gameSession.CurrentScene.Choices.OrderBy(c => c.Order))
                                    {
                                        <button class="btn btn-primary-custom btn-lg choice-button"
                                                @onclick="() => HandleChoice(choice)"
                                                disabled="@isProcessing">
                                            @if (isProcessing)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                            }
                                            <MarkdownRenderer Content="@choice.Text" />
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                        else if (gameSession.CurrentScene.SceneType == SceneType.Roll)
                        {
                            <!-- Roll Scene -->
                            <div class="text-center">
                                @if (!rollResult.HasValue)
                                {
                                    <h5 class="mb-4 text-muted">Time to test your luck!</h5>
                                    if (gameSession.Scenario.AgeGroup != "1-2")
                                    {
                                        <p class="mb-4">You need to roll @gameSession.CurrentScene.RollTarget or higher.</p>
                                    }
                                    <div class="dice-roller-container">
                                        <DiceRoller DiceCount="1" Faces="20" SoundOn="true" HapticsOn="true" DarkMode="false"
                                                    RollDurationMs="1500" WaitAfterRollDuration="500" OnRollResult="HandleRollResult"/>
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-4">
                                        <h3 class="text-primary-custom mb-2">
                                            <i class="fas fa-dice me-2"></i>
                                            You rolled: @rollResult
                                        </h3>
                                        <div class="alert @(rollResult >= gameSession.CurrentScene.RollTarget ? "alert-success" : "alert-warning")">
                                            @{
                                                bool isSuccess = rollResult >= gameSession.CurrentScene.RollTarget;
                                                string resultMessage;
                                                
                                                if (gameSession.Scenario.AgeGroup == "1-2")
                                                {
                                                    // Age group 1-2: Always show success with young exclamations
                                                    string[] youngExclamations = new[] { "Yipee!", "Hooray!", "Wow!" };
                                                    resultMessage = youngExclamations[new Random().Next(youngExclamations.Length)];
                                                    isSuccess = true; // Always treat as success for 1-2 age group
                                                }
                                                else if (gameSession.Scenario.AgeGroup == "3-5")
                                                {
                                                    // Age group 3-5: Show success or failure exclamations based on roll
                                                    if (isSuccess)
                                                    {
                                                        string[] successExclamations = new[] { "Yay!", "Hooray!", "Wow!", "Yippee!", "Super!", "Yes!" };
                                                        resultMessage = successExclamations[new Random().Next(successExclamations.Length)];
                                                    }
                                                    else
                                                    {
                                                        string[] failureExclamations = new[] { "Oops!", "Uh-oh!", "Whoops!", "Oh dear!", "Whoopsie!" };
                                                        resultMessage = failureExclamations[new Random().Next(failureExclamations.Length)];
                                                    }
                                                }
                                                else
                                                {
                                                    // Other age groups: Standard success/fail messages
                                                    resultMessage = isSuccess ? "Success!" : "Fail!";
                                                }
                                            }

                                            @if (isSuccess)
                                            {
                                                <h5 class="mb-2">@resultMessage</h5>
                                                <div class="mb-0">
                                                    <MarkdownRenderer Content="@gameSession.CurrentScene.SuccessBranch" />
                                                </div>
                                            }
                                            else
                                            {
                                                <h5 class="mb-2">@resultMessage</h5>
                                                <div class="mb-0">
                                                    <MarkdownRenderer Content="@gameSession.CurrentScene.FailureBranch" />
                                                </div>
                                            }
                                        </div>

                                    </div>

                                    <button class="btn btn-primary-custom btn-lg mb-2"
                                            @onclick="ContinueFromRoll"
                                            disabled="@isProcessing">
                                        @if (isProcessing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        Continue Adventure
                                    </button>
                                }
                            </div>
                        }
                        else if (gameSession.CurrentScene.NextSceneId == null)
                        {
                            <!-- Final Scene (no more scenes to go to) -->
                            <div class="text-center">
                                <div class="alert alert-success">
                                    <h4 class="alert-heading">
                                        <i class="fas fa-trophy me-2"></i>
                                        Adventure Complete!
                                    </h4>
                                    <p class="mb-0">Congratulations on completing this adventure!</p>
                                </div>

                                <div class="mt-4">
                                    <button class="btn btn-primary-custom btn-lg" @onclick="FinishAdventure" disabled="@isProcessing">
                                        @if (isProcessing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        else
                                        {
                                            <i class="fas fa-flag-checkered me-2"></i>
                                        }
                                        Finish Adventure
                                    </button>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- Story Scene - just continue -->
                            <div class="text-center">
                                <button class="btn btn-primary-custom btn-lg mb-2"
                                        @onclick="ContinueStory"
                                        disabled="@isProcessing">
                                    @if (isProcessing)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    Continue
                                </button>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Inject] private IGameSessionService GameSessionService { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private ILogger<GameSessionPage> Logger { get; set; } = default!;

    private sealed record PlayerOption(string Id, string DisplayName);

    private GameSession? gameSession;
    private bool isProcessing = false;
    private int? rollResult = null;
    private bool hasNavigatedHome = false;

    private List<PlayerOption> playerOptions = new();
    private string? selectedPlayerId;

    protected override void OnInitialized()
    {
        // Get current game session
        gameSession = GameSessionService.CurrentGameSession;
        BuildPlayerOptions(gameSession);

        // Subscribe to changes
        GameSessionService.GameSessionChanged += OnGameSessionChanged;

        // If no game session, redirect to home
        // if (gameSession == null)
        // {
        //     Logger.LogWarning("No active game session found, redirecting to home");
        //     Navigation.NavigateTo("/");
        // }
    }

    private void OnGameSessionChanged(object? sender, GameSession? session)
    {
        gameSession = session;
        BuildPlayerOptions(session);
        rollResult = null; // Reset roll result when scene changes

        // If the session has been completed elsewhere (e.g., via Continue when no next scene),
        // automatically navigate back to Home once, to finish the adventure flow.
        if (!hasNavigatedHome && session?.IsCompleted == true)
        {
            hasNavigatedHome = true; // guard against double navigation
            // Ensure any local state is cleared
            try
            {
                GameSessionService.ClearGameSession();
            }
            catch { /* ignore */ }

            // Force-load home to reset any transient state
            Navigation.NavigateTo("/", true);
        }

        InvokeAsync(StateHasChanged);
    }

    private string GetPageTitle()
    {
        if (gameSession?.CurrentScene != null)
        {
            return $"{gameSession.CurrentScene.Title} - {gameSession.ScenarioName}";
        }
        return "Game Session â€¢ Mystira";
    }

    private void BuildPlayerOptions(GameSession? session)
    {
        playerOptions = new List<PlayerOption>();

        if (session == null)
        {
            selectedPlayerId = null;
            return;
        }

        void Add(string id, string displayName)
        {
            if (string.IsNullOrWhiteSpace(id) || playerOptions.Any(p => p.Id == id))
            {
                return;
            }

            playerOptions.Add(new PlayerOption(id, displayName));
        }

        if (!string.IsNullOrWhiteSpace(session.ProfileId))
        {
            Add(session.ProfileId, "Session Owner");
        }

        foreach (var assignment in session.CharacterAssignments)
        {
            var pa = assignment.PlayerAssignment;
            if (pa == null)
            {
                continue;
            }

            if (!string.IsNullOrWhiteSpace(pa.ProfileId))
            {
                Add(pa.ProfileId!, pa.ProfileName ?? assignment.CharacterName);
            }
            else if (!string.IsNullOrWhiteSpace(pa.GuestName))
            {
                Add($"guest:{pa.GuestName}", pa.GuestName!);
            }
        }

        if (string.IsNullOrWhiteSpace(selectedPlayerId) || playerOptions.All(p => p.Id != selectedPlayerId))
        {
            selectedPlayerId = playerOptions.FirstOrDefault()?.Id;
        }
    }

    private async Task HandleChoice(Choice choice)
    {
        if (gameSession?.CurrentScene == null || string.IsNullOrEmpty(choice.NextSceneId))
            return;

        try
        {
            isProcessing = true;
            StateHasChanged();

            Logger.LogInformation("Player chose: {ChoiceText} -> {NextScene}", choice.Text, choice.NextSceneId);

            await GameSessionService.MakeChoiceAsync(
                gameSession.Id,
                gameSession.CurrentScene.Id,
                choice.Text,
                choice.NextSceneId,
                selectedPlayerId,
                choice.CompassAxis,
                choice.CompassDirection,
                choice.CompassDelta);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error handling choice: {ChoiceText}", choice.Text);
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private void ExitAdventure()
    {
        try
        {
            isProcessing = true;
            // Clear the current game session and navigate back to Home
            GameSessionService.ClearGameSession();
            Navigation.NavigateTo("/");
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task PauseGame()
    {
        if (isProcessing)
            return;

        try
        {
            isProcessing = true;
            StateHasChanged();

            var success = await GameSessionService.PauseGameSessionAsync();
            if (!success)
            {
                Logger.LogWarning("Failed to pause game session");
            }
            else
            {
                Logger.LogInformation("Game session paused");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error pausing game");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task ResumeGame()
    {
        if (isProcessing)
            return;

        try
        {
            isProcessing = true;
            StateHasChanged();

            var success = await GameSessionService.ResumeGameSessionAsync();
            if (!success)
            {
                Logger.LogWarning("Failed to resume game session");
            }
            else
            {
                Logger.LogInformation("Game session resumed");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error resuming game");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task ContinueFromRoll()
    {
        if (isProcessing || gameSession?.CurrentScene == null || !rollResult.HasValue)
            return;

        try
        {
            isProcessing = true;
            StateHasChanged();

            // Determine if the roll was successful
            bool isSuccess = rollResult.Value >= (gameSession.CurrentScene.RollTarget ?? 0);

            Logger.LogInformation("Processing roll result: {RollResult}, Target: {Target}, Success: {IsSuccess}",
                rollResult.Value, gameSession.CurrentScene.RollTarget, isSuccess);

            // Navigate based on success/failure
            var success = await GameSessionService.NavigateFromRollAsync(isSuccess);

            if (!success)
            {
                Logger.LogError("Failed to navigate from roll scene");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error continuing from roll");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task ContinueStory()
    {
        if (isProcessing)
            return;

        try
        {
            isProcessing = true;
            StateHasChanged();

            // For story scenes, advance to the next scene
            var success = await GameSessionService.GoToNextSceneAsync();
            if (!success)
            {
                Logger.LogError("Failed to advance to next scene");
            }

            Logger.LogInformation("Story scene advanced");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error continuing story");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private Task HandleRollResult(int arg)
    {
        rollResult = arg;

        return Task.CompletedTask;
    }

    private async Task CompleteSession()
    {
        Logger.LogInformation("Completing adventure (changing game state to finished)... ");
        try
        {
            await GameSessionService.CompleteGameSessionAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error when completing adventure.");
        }
    }


    private async Task FinishAdventure()
    {
        if (isProcessing)
            return;

        try
        {
            isProcessing = true;
            StateHasChanged();

            Logger.LogInformation("Finishing adventure and returning to main menu");

            // Complete the session
            await CompleteSession();

            // Clear the current game session
            GameSessionService.ClearGameSession();

            // Navigate back to home
            hasNavigatedHome = true;
            Navigation.NavigateTo("/", true);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error finishing adventure");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }
}
