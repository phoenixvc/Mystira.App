@page "/signin"
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject ILogger<SignIn> Logger

<PageTitle>Sign In - Mystira</PageTitle>

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-body p-5 text-center">
                    <i class="fas fa-dragon fa-4x text-primary-custom mb-4"></i>
                    <h2 class="card-title mb-3">Welcome Back</h2>
                    <p class="text-muted mb-4">Sign in to continue your adventure</p>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @errorMessage
                        </div>
                    }

                    @if (isLoading)
                    {
                        <div class="d-flex flex-column align-items-center">
                            <div class="spinner-border text-primary mb-3" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted">Redirecting to sign in...</p>
                        </div>
                    }
                    else
                    {
                        <button type="button"
                                class="btn btn-primary-custom btn-lg w-100 mb-3"
                                @onclick="SignInWithGoogle"
                                disabled="@isLoading">
                            <i class="fab fa-google me-2"></i>
                            Continue with Google
                        </button>

                        <hr class="my-4" />

                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                Don't have an account?
                                <a href="/signup" class="text-primary-custom text-decoration-none">
                                    Get Started
                                </a>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            Navigation.NavigateTo("/");
        }
    }

    private async Task SignInWithGoogle()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            StateHasChanged();

            Logger.LogInformation("Initiating Google sign-in via Entra External ID");

            if (AuthService is EntraExternalIdAuthService entraService)
            {
                await entraService.LoginWithEntraAsync("Google");
            }
            else
            {
                errorMessage = "Authentication provider is not configured correctly.";
                Logger.LogError("EntraExternalIdAuthService is not configured");
                isLoading = false;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initiating Google sign-in");
            errorMessage = "An error occurred while signing in. Please try again.";
            isLoading = false;
            StateHasChanged();
        }
    }
}
