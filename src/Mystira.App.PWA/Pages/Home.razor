@page "/"
@page "/home"
@using Mystira.App.PWA.Components
@using Mystira.App.PWA.Services
@using Mystira.App.PWA.Models
@using Mystira.App.Domain.Models
@implements IDisposable

<PageTitle>Mystira</PageTitle>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4 text-primary-custom">
                <i class="fas fa-dragon me-3"></i>
                Mystira
            </h1>
            <p class="lead text-muted">
                Dynamic Adventures for Young Heroes
            </p>
            <p class="text-muted">
                Welcome to your storytelling adventure platform!
            </p>
        </div>
    </div>
    
    <style>
        .dice-roller-container {
            max-width: 300px;
            margin: 0 auto;
            padding: 15px;
            background-color: var(--bs-body-bg, white);
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
    
    @if (isLoading)
    {
        <div class="row justify-content-center">
            <div class="col-auto text-center">
                <div class="loading-spinner mb-3"></div>
                <p class="text-muted">Loading adventures...</p>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-plus-circle text-success me-2"></i>
                            Create New Adventure
                        </h5>
                        <p class="card-text">Start a new storytelling adventure with your heroes.</p>
                        <button class="btn btn-primary-custom" @onclick="CreateNewGameSession">
                            <i class="fas fa-play me-2"></i>
                            Start Adventure
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-history text-info me-2"></i>
                            Recent Adventures
                        </h5>
                        <p class="card-text">Continue or review your previous adventures.</p>
                        <button class="btn btn-outline-primary-custom" @onclick="LoadRecentSessions">
                            <i class="fas fa-clock me-2"></i>
                            View History
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-dice text-warning me-2"></i>
                            Quick Dice Roll
                        </h5>
                        <p class="card-text">Roll dice for spontaneous challenges.</p>
                        <div class="dice-roller-container">
                            <DiceRoller />
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Current Session Display -->
            @if (CurrentGameSession != null)
            {
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card border-success">
                            <div class="card-header bg-success text-white">
                                <i class="fas fa-play-circle me-2"></i>
                                Current Adventure: @CurrentGameSession.ScenarioName
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <p><strong>Started:</strong> @CurrentGameSession.StartTime.ToString("g")</p>
                                        <p><strong>Players:</strong> @(CurrentGameSession.PlayerNames?.Count ?? 0)</p>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <a href="/gamesession/@CurrentGameSession.Id" class="btn btn-success btn-lg">
                                            <i class="fas fa-arrow-right me-2"></i>
                                            Continue Adventure
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            <!-- Scenarios List -->
            @if (scenarios.Any())
            {
                <div class="row mt-4">
                    <div class="col-12">
                        <h3 class="mb-3">
                            <i class="fas fa-book me-2"></i>
                            Available Scenarios
                        </h3>
                        <div class="row">
                            @foreach (var scenario in scenarios.Take(6))
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card scenario-card h-100">
                                        @if (!string.IsNullOrEmpty(scenario.ImageUrl))
                                        {
                                            <img src="@scenario.ImageUrl" class="card-img-top" alt="@scenario.Name" style="height: 200px; object-fit: cover;" />
                                        }
                                        
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title">@scenario.Name</h5>
                                            <p class="card-text flex-grow-1">@scenario.Description</p>
                                            
                                            <div class="mt-auto">
                                                <!-- Scenario Metadata -->
                                                <div class="scenario-metadata mb-3">
                                                    <div class="row g-2">
                                                        <div class="col-6">
                                                            <span class="badge bg-info text-dark me-1">
                                                                <i class="fas fa-users me-1"></i>@scenario.MinimumAge
                                                            </span>
                                                        </div>
                                                        <div class="col-6">
                                                            <span class="badge bg-warning me-1">
                                                                <i class="fas fa-signal me-1"></i>@scenario.Difficulty
                                                            </span>
                                                        </div>
                                                        <div class="col-6">
                                                            <span class="badge bg-success me-1">
                                                                <i class="fas fa-clock me-1"></i>@scenario.SessionLength
                                                            </span>
                                                        </div>
                                                        <div class="col-6">
                                                            <!-- Empty cell for balance -->
                                                        </div>
                                                    </div>
                                                    
                                                    @if (scenario.Tags?.Any() == true)
                                                    {
                                                        <div class="mt-2">
                                                            @foreach (var tag in scenario.Tags.Take(3))
                                                            {
                                                                <span class="badge bg-secondary me-1">@tag</span>
                                                            }
                                                            @if (scenario.Tags.Length > 3)
                                                            {
                                                                <span class="badge bg-secondary">+@(scenario.Tags.Length - 3)</span>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                                
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <small class="text-muted">
                                                        <i class="fas fa-calendar me-1"></i>
                                                        @scenario.UpdatedAt.ToString("MMM d")
                                                    </small>
                                                </div>
                                                
                                                <button class="btn btn-primary-custom btn-lg w-100" 
                                                        @onclick="() => StartAdventure(scenario)"
                                                        disabled="@isStartingAdventure">
                                                    @if (isStartingAdventure)
                                                    {
                                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                                        <span>Starting...</span>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-play me-2"></i>
                                                        <span>Start Adventure</span>
                                                    }
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    }
</div>

@code {
    [Inject] private IAuthService AuthService { get; set; } = default!;
    [Inject] private IApiClient ApiClient { get; set; } = default!;
    [Inject] private IGameSessionService GameSessionService { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private ILogger<Home> Logger { get; set; } = default!;

    private List<Mystira.App.Domain.Models.Scenario> scenarios = new();
    private Mystira.App.Domain.Models.GameSession? CurrentGameSession => GameSessionService.CurrentGameSession;
    private bool isLoading = true;
    private bool isStartingAdventure = false;

    protected override async Task OnInitializedAsync()
    {
        try 
        {
            Logger.LogInformation("Home component initializing...");
            
            // Subscribe to authentication state changes
            AuthService.AuthenticationStateChanged += OnAuthenticationStateChanged;
            
            // Check current authentication status
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            
            Logger.LogInformation("Auth service initialized. IsAuthenticated: {IsAuthenticated}", isAuthenticated);
            
            // Load scenarios only if authenticated
            if (isAuthenticated) 
            {
                await LoadScenarios();
            }
            else 
            {
                isLoading = false;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during component initialization");
            isLoading = false;
            StateHasChanged();
        }
    }

    private void OnAuthenticationStateChanged(object? sender, bool authenticated)
    {
        InvokeAsync(async () => 
        {
            if (authenticated)
            {
                await LoadScenarios();
            }
            else 
            {
                scenarios.Clear();
            }
            StateHasChanged();
        });
    }

    private async Task LoadScenarios()
    {
        try
        {
            isLoading = true;
            StateHasChanged();
            
            Logger.LogInformation("Loading scenarios...");
            scenarios = await ApiClient.GetScenariosAsync();
            Logger.LogInformation("Loaded {Count} scenarios", scenarios.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading scenarios");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task StartAdventure(Scenario scenario)
    {
        try
        {
            isStartingAdventure = true;
            StateHasChanged();
            
            Logger.LogInformation("Starting adventure: {ScenarioName}", scenario.Name);
            
            // Clear any existing game session
            GameSessionService.ClearGameSession();
            
            // Get the full scenario with scenes
            var fullScenario = await ApiClient.GetScenarioAsync(scenario.Id);
            if (fullScenario == null)
            {
                Logger.LogError("Could not load scenario details for: {ScenarioName}", scenario.Name);
                return;
            }
            
            // Start the game session
            var success = await GameSessionService.StartGameSessionAsync(fullScenario);
            if (success)
            {
                Logger.LogInformation("Game session started successfully for: {ScenarioName}", scenario.Name);
                Navigation.NavigateTo("/game");
            }
            else
            {
                Logger.LogError("Failed to start game session for: {ScenarioName}", scenario.Name);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error starting adventure: {ScenarioName}", scenario.Name);
        }
        finally
        {
            isStartingAdventure = false;
            StateHasChanged();
        }
    }

    private async Task CreateNewGameSession()
    {
        // Navigate to scenario selection or create new scenario page
        Navigation.NavigateTo("/scenarios");
    }

    private async Task LoadRecentSessions()
    {
        // Navigate to sessions history page
        Navigation.NavigateTo("/sessions");
    }

    public void Dispose()
    {
        if (AuthService != null)
        {
            AuthService.AuthenticationStateChanged -= OnAuthenticationStateChanged;
        }
    }
}