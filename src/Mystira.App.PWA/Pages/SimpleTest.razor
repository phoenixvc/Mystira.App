@page "/test"

<PageTitle>Simple Test</PageTitle>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4 text-primary">Simple Test Page</h1>
            <p class="lead">This is a minimal test page to verify Blazor is working.</p>
        </div>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h3>Current Time</h3>
                    <p class="h4 text-info">@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    <button class="btn btn-primary mt-3" @onclick="RefreshTime">
                        Refresh Time
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void RefreshTime()
    {
        // This will trigger a re-render
        StateHasChanged();
    }
}
