@page "/signup"
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject ILogger<SignUp> Logger

<PageTitle>Get Started - Mystira</PageTitle>

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card @(isLoading ? "loading" : "")">
            <!-- Logo and Branding -->
            <div class="auth-header">
                <a href="/" class="auth-logo-link">
                    <img src="images/mystira-logo.webp" alt="Mystira" class="auth-logo" />
                </a>
                <h1 class="auth-title">Join Mystira</h1>
                <p class="auth-subtitle">Start your magical adventure today</p>
            </div>

            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="auth-error" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>@errorMessage</span>
                </div>
            }

            <!-- Sign Up Content -->
            <div class="auth-content">
                @if (isLoading)
                {
                    <div class="auth-loading">
                        <div class="auth-spinner">
                            <div class="spinner-ring"></div>
                            <i class="fab fa-google spinner-icon"></i>
                        </div>
                        <p class="loading-text">Connecting to Google...</p>
                        <p class="loading-subtext">Creating your account</p>
                    </div>
                }
                else
                {
                    <!-- Benefits List -->
                    <div class="signup-benefits">
                        <div class="benefit-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Free to get started</span>
                        </div>
                        <div class="benefit-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Interactive story adventures</span>
                        </div>
                        <div class="benefit-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Safe for the whole family</span>
                        </div>
                    </div>

                    <!-- Google Sign Up Button -->
                    <button type="button"
                            class="google-signin-btn"
                            @onclick="SignUpWithGoogle"
                            disabled="@isLoading">
                        <svg class="google-icon" viewBox="0 0 24 24" width="24" height="24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        <span>Continue with Google</span>
                    </button>

                    <!-- Divider -->
                    <div class="auth-divider">
                        <span>Secure sign-up powered by Microsoft</span>
                    </div>

                    <!-- Security Badge -->
                    <div class="security-info">
                        <i class="fas fa-shield-alt"></i>
                        <span>Your data is protected with enterprise-grade security</span>
                    </div>
                }
            </div>

            <!-- Footer -->
            <div class="auth-footer">
                <p>
                    Already have an account?
                    <a href="/signin" class="auth-link">Sign In</a>
                </p>
            </div>
        </div>

        <!-- Back to Home Link -->
        <a href="/" class="back-home-link">
            <i class="fas fa-arrow-left"></i>
            <span>Back to Home</span>
        </a>
    </div>
</div>

@code {
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            if (isAuthenticated)
            {
                Navigation.NavigateTo("/");
            }
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Error checking authentication status on SignUp page");
        }
    }

    private async Task SignUpWithGoogle()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            StateHasChanged();

            Logger.LogInformation("Initiating Google sign-up via Entra External ID");

            if (AuthService is EntraExternalIdAuthService entraService)
            {
                await entraService.LoginWithEntraAsync("Google");
            }
            else
            {
                errorMessage = "Authentication is not configured correctly. Please try again later.";
                Logger.LogError("EntraExternalIdAuthService is not configured");
                isLoading = false;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initiating Google sign-up");
            errorMessage = "Unable to connect to sign-up service. Please check your connection and try again.";
            isLoading = false;
            StateHasChanged();
        }
    }
}
