{
  "// Production Configuration": "Optimized for production workloads",
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "Azure.Core": "Warning",
      "Azure.Identity": "Warning",
      "Mystira": "Information"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Error",
        "Azure.Core": "Error",
        "Azure.Identity": "Error",
        "System": "Warning",
        "Mystira": "Information"
      }
    },
    "Enrich": ["FromLogContext", "WithMachineName", "WithCorrelationId"],
    "Properties": {
      "Application": "Mystira.App.Api",
      "Environment": "Production"
    }
  },
  "ApplicationInsights": {
    "EnableAdaptiveSampling": true,
    "EnableDependencyTrackingTelemetryModule": true,
    "EnablePerformanceCounterCollectionModule": true,
    "EnableQuickPulseMetricStream": true,
    "EnableRequestTrackingTelemetryModule": true,
    "EnableEventCounterCollectionModule": true
  },
  "RequestLogging": {
    "SlowRequestThresholdMs": 2000
  },
  "InitializeDatabaseOnStartup": false,
  "StoryProtocol": {
    "// Note": "Story Protocol enabled in production - uses gRPC to Mystira.Chain",
    "Enabled": true,
    "UseMockImplementation": false
  },
  "ChainService": {
    "// Note": "gRPC to Mystira.Chain enabled in production - see ADR-0013",
    "UseGrpc": true,
    "// GrpcEndpoint_Note": "⚠️ Load from Key Vault: ChainService--GrpcEndpoint",
    "GrpcEndpoint": "",
    "TimeoutSeconds": 120,
    "MaxRetryAttempts": 3,
    "RetryDelayMs": 1000,
    "EnableHealthChecks": true
  }
}
