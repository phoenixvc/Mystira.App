{
  "// Production Configuration": "Optimized for production workloads",
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "Azure.Core": "Warning",
      "Azure.Identity": "Warning",
      "Mystira": "Information"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Error",
        "Azure.Core": "Error",
        "Azure.Identity": "Error",
        "System": "Warning",
        "Mystira": "Information"
      }
    },
    "Enrich": ["FromLogContext", "WithMachineName", "WithCorrelationId"],
    "Properties": {
      "Application": "Mystira.App.Api",
      "Environment": "Production"
    }
  },
  "ApplicationInsights": {
    "EnableAdaptiveSampling": true,
    "EnableDependencyTrackingTelemetryModule": true,
    "EnablePerformanceCounterCollectionModule": true,
    "EnableQuickPulseMetricStream": true,
    "EnableRequestTrackingTelemetryModule": true,
    "EnableEventCounterCollectionModule": true
  },
  "RequestLogging": {
    "SlowRequestThresholdMs": 2000
  },
  "InitializeDatabaseOnStartup": false
}
