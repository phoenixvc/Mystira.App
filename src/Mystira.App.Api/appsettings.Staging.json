{
  "// Staging Configuration": "Similar to production with more verbose logging",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Azure.Core": "Warning",
      "Azure.Identity": "Warning",
      "Mystira": "Debug"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Azure.Core": "Warning",
        "Azure.Identity": "Warning",
        "System": "Warning",
        "Mystira": "Debug"
      }
    },
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithCorrelationId"],
    "Properties": {
      "Application": "Mystira.App.Api",
      "Environment": "Staging"
    }
  },
  "ApplicationInsights": {
    "EnableAdaptiveSampling": true,
    "EnableDependencyTrackingTelemetryModule": true,
    "EnablePerformanceCounterCollectionModule": true,
    "EnableQuickPulseMetricStream": true,
    "EnableRequestTrackingTelemetryModule": true,
    "EnableEventCounterCollectionModule": true
  },
  "RequestLogging": {
    "SlowRequestThresholdMs": 3000
  },
  "InitializeDatabaseOnStartup": false,
  "StoryProtocol": {
    "// Note": "Story Protocol enabled in staging for integration testing",
    "Enabled": true,
    "UseMockImplementation": false
  },
  "ChainService": {
    "// Note": "gRPC to Mystira.Chain enabled in staging - validates gRPC integration",
    "UseGrpc": true,
    "// GrpcEndpoint_Note": "⚠️ Load from Key Vault: ChainService--GrpcEndpoint",
    "GrpcEndpoint": "",
    "TimeoutSeconds": 60,
    "MaxRetryAttempts": 3,
    "RetryDelayMs": 500,
    "EnableHealthChecks": true
  }
}
