@{
    ViewData["Title"] = "Compass Axes Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Compass Axes</h3>
                    <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
                </div>
                <div class="card-body">
                    <div id="errorAlert" class="alert alert-danger d-none"></div>
                    <div id="successAlert" class="alert alert-success d-none"></div>

                    <div class="row">
                        <div class="col-md-7">
                            <h5>Existing Axes</h5>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="axesTableBody">
                                        <!-- Filled by JS -->
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="col-md-5">
                            <h5 id="formTitle">Create / Update Axis</h5>
                            <form id="axisForm">
                                <input type="hidden" id="axisId" />
                                <div class="mb-3">
                                    <label for="axisName" class="form-label">Name *</label>
                                    <input type="text" id="axisName" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label for="axisDescription" class="form-label">Description</label>
                                    <textarea id="axisDescription" class="form-control" rows="3"></textarea>
                                </div>

                                <div class="d-flex gap-2">
                                    <button type="submit" id="saveAxisBtn" class="btn btn-primary">Save</button>
                                    <button type="button" id="resetAxisBtn" class="btn btn-secondary">Reset</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>

@{ var cspNonce = Context.Items["CspNonce"] as string; }
<script nonce="@cspNonce">
    const apiBase = '/api/admin/compassaxes';

    async function loadAxes() {
        try {
            const res = await fetch(apiBase, { credentials: 'include' });
            if (!res.ok) throw new Error('Failed to load compass axes');
            const data = await res.json();
            const tbody = document.getElementById('axesTableBody');
            tbody.innerHTML = '';
            data.forEach(axis => {
                const tr = document.createElement('tr');
                const tdName = document.createElement('td');
                tdName.textContent = axis.name;
                const tdDesc = document.createElement('td');
                tdDesc.textContent = axis.description || '';
                const tdActions = document.createElement('td');

                const editBtn = document.createElement('button');
                editBtn.type = 'button';
                editBtn.className = 'btn btn-sm btn-outline-primary me-2';
                editBtn.textContent = 'Edit';
                editBtn.setAttribute('data-action', 'edit');
                editBtn.setAttribute('data-id', axis.id);
                editBtn.setAttribute('data-name', axis.name ?? '');
                editBtn.setAttribute('data-description', axis.description ?? '');

                const delBtn = document.createElement('button');
                delBtn.type = 'button';
                delBtn.className = 'btn btn-sm btn-outline-danger';
                delBtn.textContent = 'Delete';
                delBtn.setAttribute('data-action', 'delete');
                delBtn.setAttribute('data-id', axis.id);

                tdActions.appendChild(editBtn);
                tdActions.appendChild(delBtn);

                tr.appendChild(tdName);
                tr.appendChild(tdDesc);
                tr.appendChild(tdActions);
                tbody.appendChild(tr);
            });
        } catch (e) {
            showError(e.message);
        }
    }

    function editAxis(axis) {
        document.getElementById('axisId').value = axis.id;
        document.getElementById('axisName').value = axis.name;
        document.getElementById('axisDescription').value = axis.description || '';
        document.getElementById('formTitle').textContent = 'Update Axis';
    }

    async function saveAxis() {
        const id = document.getElementById('axisId').value;
        const name = document.getElementById('axisName').value;
        const description = document.getElementById('axisDescription').value;

        if (!name) {
            showError('Name is required');
            return;
        }

        const payload = { name, description };

        try {
            const method = id ? 'PUT' : 'POST';
            const url = id ? `${apiBase}/${id}` : apiBase;
            const res = await fetch(url, {
                method: method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload),
                credentials: 'include'
            });

            if (!res.ok) {
                const errorData = await res.json();
                throw new Error(errorData.message || 'Failed to save axis');
            }

            showSuccess(id ? 'Axis updated successfully' : 'Axis created successfully');
            resetForm();
            loadAxes();
        } catch (e) {
            showError(e.message);
        }
    }

    async function deleteAxis(id) {
        if (!confirm('Are you sure you want to delete this axis?')) return;

        try {
            const res = await fetch(`${apiBase}/${id}`, {
                method: 'DELETE',
                credentials: 'include'
            });

            if (!res.ok) throw new Error('Failed to delete axis');

            showSuccess('Axis deleted successfully');
            loadAxes();
        } catch (e) {
            showError(e.message);
        }
    }

    function resetForm() {
        document.getElementById('axisForm').reset();
        document.getElementById('axisId').value = '';
        document.getElementById('formTitle').textContent = 'Create / Update Axis';
    }

    function showError(message) {
        const alert = document.getElementById('errorAlert');
        alert.textContent = message;
        alert.classList.remove('d-none');
        setTimeout(() => alert.classList.add('d-none'), 5000);
    }

    function showSuccess(message) {
        const alert = document.getElementById('successAlert');
        alert.textContent = message;
        alert.classList.remove('d-none');
        setTimeout(() => alert.classList.add('d-none'), 5000);
    }

    // Wire up events without inline handlers
    document.addEventListener('DOMContentLoaded', () => {
        // Form submit
        const form = document.getElementById('axisForm');
        form.addEventListener('submit', (e) => {
            e.preventDefault();
            saveAxis();
        });

        // Reset button
        const resetBtn = document.getElementById('resetAxisBtn');
        resetBtn.addEventListener('click', () => resetForm());

        // Delegate clicks on actions in table
        const tbody = document.getElementById('axesTableBody');
        tbody.addEventListener('click', (e) => {
            const target = e.target.closest('button');
            if (!target) return;
            const action = target.getAttribute('data-action');
            if (action === 'edit') {
                const axis = {
                    id: target.getAttribute('data-id'),
                    name: target.getAttribute('data-name') || '',
                    description: target.getAttribute('data-description') || ''
                };
                editAxis(axis);
            } else if (action === 'delete') {
                const id = target.getAttribute('data-id');
                if (id) deleteAxis(id);
            }
        });

        // Initial load
        loadAxes();
    });
</script>
