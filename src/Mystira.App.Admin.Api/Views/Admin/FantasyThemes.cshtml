@{
    ViewData["Title"] = "Fantasy Themes Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Fantasy Themes</h3>
                    <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
                </div>
                <div class="card-body">
                    <div id="errorAlert" class="alert alert-danger d-none"></div>
                    <div id="successAlert" class="alert alert-success d-none"></div>

                    <div class="row">
                        <div class="col-md-7">
                            <h5>Existing Fantasy Themes</h5>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="fantasyThemesTableBody">
                                        <!-- Filled by JS -->
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="col-md-5">
                            <h5 id="formTitle">Create / Update Fantasy Theme</h5>
                            <form id="fantasyThemeForm" onsubmit="return false;">
                                <input type="hidden" id="fantasyThemeId" />
                                <div class="mb-3">
                                    <label for="fantasyThemeName" class="form-label">Name *</label>
                                    <input type="text" id="fantasyThemeName" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label for="fantasyThemeDescription" class="form-label">Description</label>
                                    <textarea id="fantasyThemeDescription" class="form-control" rows="3"></textarea>
                                </div>

                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-primary" onclick="saveFantasyTheme()">Save</button>
                                    <button type="button" class="btn btn-secondary" onclick="resetForm()">Reset</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const apiBase = '/api/admin/fantasythemes';

    async function loadFantasyThemes() {
        try {
            const res = await fetch(apiBase, { credentials: 'include' });
            if (!res.ok) throw new Error('Failed to load fantasy themes');
            const data = await res.json();
            const tbody = document.getElementById('fantasyThemesTableBody');
            tbody.innerHTML = '';
            data.forEach(fantasyTheme => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${fantasyTheme.name}</td>
                    <td>${fantasyTheme.description || ''}</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" onclick='editFantasyTheme(${JSON.stringify(fantasyTheme)})'>Edit</button>
                        <button class="btn btn-sm btn-outline-danger" onclick='deleteFantasyTheme("${fantasyTheme.id}")'>Delete</button>
                    </td>`;
                tbody.appendChild(tr);
            });
        } catch (e) {
            showError(e.message);
        }
    }

    function editFantasyTheme(fantasyTheme) {
        document.getElementById('fantasyThemeId').value = fantasyTheme.id;
        document.getElementById('fantasyThemeName').value = fantasyTheme.name;
        document.getElementById('fantasyThemeDescription').value = fantasyTheme.description || '';
        document.getElementById('formTitle').textContent = 'Update Fantasy Theme';
    }

    async function saveFantasyTheme() {
        const id = document.getElementById('fantasyThemeId').value;
        const name = document.getElementById('fantasyThemeName').value;
        const description = document.getElementById('fantasyThemeDescription').value;

        if (!name) {
            showError('Name is required');
            return;
        }

        const payload = { name, description };

        try {
            const method = id ? 'PUT' : 'POST';
            const url = id ? `${apiBase}/${id}` : apiBase;
            const res = await fetch(url, {
                method: method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload),
                credentials: 'include'
            });

            if (!res.ok) {
                const errorData = await res.json();
                throw new Error(errorData.message || 'Failed to save fantasy theme');
            }

            showSuccess(id ? 'Fantasy theme updated successfully' : 'Fantasy theme created successfully');
            resetForm();
            loadFantasyThemes();
        } catch (e) {
            showError(e.message);
        }
    }

    async function deleteFantasyTheme(id) {
        if (!confirm('Are you sure you want to delete this fantasy theme?')) return;

        try {
            const res = await fetch(`${apiBase}/${id}`, {
                method: 'DELETE',
                credentials: 'include'
            });

            if (!res.ok) throw new Error('Failed to delete fantasy theme');

            showSuccess('Fantasy theme deleted successfully');
            loadFantasyThemes();
        } catch (e) {
            showError(e.message);
        }
    }

    function resetForm() {
        document.getElementById('fantasyThemeForm').reset();
        document.getElementById('fantasyThemeId').value = '';
        document.getElementById('formTitle').textContent = 'Create / Update Fantasy Theme';
    }

    function showError(message) {
        const alert = document.getElementById('errorAlert');
        alert.textContent = message;
        alert.classList.remove('d-none');
        setTimeout(() => alert.classList.add('d-none'), 5000);
    }

    function showSuccess(message) {
        const alert = document.getElementById('successAlert');
        alert.textContent = message;
        alert.classList.remove('d-none');
        setTimeout(() => alert.classList.add('d-none'), 5000);
    }

    // Load on page load
    loadFantasyThemes();
</script>
