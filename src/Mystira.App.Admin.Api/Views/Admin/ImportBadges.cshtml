@{
    ViewData["Title"] = "Import Badges";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Import Badge Configurations</h3>
                    <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Badge Configuration:</strong> Upload a YAML file containing badge definitions with thresholds and image references.
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Upload Badge YAML</h5>
                                </div>
                                <div class="card-body">
                                    <form id="badgeUploadForm" method="post" enctype="multipart/form-data" action="/api/badge/upload">
                                        <div class="form-group mb-3">
                                            <label for="yamlFile">Badge Configuration YAML File</label>
                                            <input type="file" class="form-control" id="yamlFile" name="yamlFile" accept=".yaml,.yml" required>
                                            <small class="form-text text-muted">
                                                Upload a YAML file containing badge configurations
                                            </small>
                                        </div>

                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" value="true" id="validateImages" name="validateImages" checked>
                                            <label class="form-check-label" for="validateImages">
                                                Validate image references
                                            </label>
                                            <small class="form-text text-muted">
                                                Checks that all image references in badges exist in the media database
                                            </small>
                                        </div>

                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" value="true" id="overwriteExisting" name="overwriteExisting">
                                            <label class="form-check-label" for="overwriteExisting">
                                                Overwrite existing badges
                                            </label>
                                            <small class="form-text text-muted">
                                                Warning: This will replace existing badges with the same ID
                                            </small>
                                        </div>

                                        <button type="submit" class="btn btn-primary">Upload Badge Configuration</button>
                                        <button type="button" class="btn btn-info" onclick="validateYamlFile()">Validate YAML</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Sidebar -->
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Expected YAML Format</h5>
                                </div>
                                <div class="card-body">
                                    <pre class="small"><code>badges:
  - id: honesty_badge_1
    name: Honesty
    message: Congratulations, you have earned your first badge for being honest
    axis: honesty
    threshold: 3.0
    image_id: media/images/badge_honesty_1.jpg
  - id: honesty_badge_2
    name: Honesty
    message: Congratulations, you have earned your second badge for displaying remarkable honesty
    axis: honesty
    threshold: 7.0
    image_id: media/images/badge_honesty2.jpg
  - id: bravery_badge_1
    name: Bravery
    message: You showed great courage in the face of danger
    axis: bravery
    threshold: 4.0
    image_id: media/images/badge_bravery_1.jpg</code></pre>
                                </div>
                            </div>

                            <div class="card mt-3">
                                <div class="card-header">
                                    <h5>Available Compass Axes</h5>
                                </div>
                                <div class="card-body">
                                    <div class="small">
                                        <div class="mb-1"><strong>Core Values:</strong> honesty, bravery, generosity, loyalty</div>
                                        <div class="mb-1"><strong>Character:</strong> humility, empathy, resilience, responsibility</div>
                                        <div class="mb-1"><strong>Social:</strong> justice, trust, kindness, cooperation</div>
                                        <div class="mb-1"><strong>Growth:</strong> patience, curiosity, perseverance, adaptability</div>
                                        <div class="mb-1"><strong>Emotional:</strong> forgiveness, compassion, gratitude</div>
                                    </div>
                                </div>
                            </div>

                            <div class="card mt-3">
                                <div class="card-header">
                                    <h5>Tips</h5>
                                </div>
                                <div class="card-body">
                                    <ul class="small">
                                        <li>Use descriptive badge IDs (lowercase, underscores)</li>
                                        <li>Threshold values should be progressive (3.0, 7.0, 10.0)</li>
                                        <li>Ensure image paths follow media naming conventions</li>
                                        <li>Badge messages should be encouraging and age-appropriate</li>
                                        <li>Axis names must match available compass axes</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Progress and Results -->
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Upload Progress</h5>
                                </div>
                                <div class="card-body">
                                    <div id="uploadProgress" style="display: none;">
                                        <div class="progress mb-3">
                                            <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                                        </div>
                                        <div id="progressText">Preparing upload...</div>
                                    </div>

                                    <div id="uploadResults"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>

@{ var cspNonce = Context.Items["CspNonce"] as string; }
<script nonce="@cspNonce">
function validateYamlFile() {
    const fileInput = document.getElementById('yamlFile');
    if (!fileInput.files.length) {
        alert('Please select a YAML file first');
        return;
    }

    const file = fileInput.files[0];
    const reader = new FileReader();

    reader.onload = function(e) {
        try {
            // Basic validation - check if it looks like badge YAML
            const content = e.target.result;
            if (!content.includes('badges:') || !content.includes('- id:')) {
                alert('Warning: This doesn\'t look like a valid badge configuration YAML file.\nExpected to find "badges:" and "- id:" fields.');
                return;
            }

            // Count badges
            const badgeMatches = content.match(/- id:/g);
            const badgeCount = badgeMatches ? badgeMatches.length : 0;

            alert(`YAML file appears to be valid with ${badgeCount} badge(s). Click "Upload Badge Configuration" to proceed.`);
        } catch (error) {
            alert('Error reading file: ' + error.message);
        }
    };

    reader.readAsText(file);
}

document.getElementById('badgeUploadForm').addEventListener('submit', function(e) {
    e.preventDefault();

    const formData = new FormData(this);

    // Explicitly set checkbox values
    formData.set('validateImages', document.getElementById('validateImages').checked);
    formData.set('overwriteExisting', document.getElementById('overwriteExisting').checked);

    showProgress('Uploading badge configuration...');

    fetch('/api/badge/upload', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        hideProgress();

        if (data.success) {
            showUploadResult('success', `Badge configuration uploaded successfully!`);

            if (data.uploadedCount > 0) {
                showUploadSummary(data);
            }

            if (data.errors && data.errors.length > 0) {
                showUploadResult('warning', `Warnings: ${data.errors.join(', ')}`);
            }

            this.reset();
        } else {
            showUploadResult('error', data.message || 'Badge upload failed');

            if (data.errors && data.errors.length > 0) {
                showValidationResults(data.errors);
            }
        }
    })
    .catch(error => {
        hideProgress();
        showUploadResult('error', 'Badge upload failed: ' + error.message);
    });
});

function showProgress(message) {
    document.getElementById('uploadProgress').style.display = 'block';
    document.getElementById('progressBar').style.width = '25%';
    document.getElementById('progressText').textContent = message;
}

function hideProgress() {
    document.getElementById('uploadProgress').style.display = 'none';
}

function showUploadResult(type, message) {
    const alertClass = type === 'success' ? 'alert-success' :
                     type === 'warning' ? 'alert-warning' : 'alert-danger';

    document.getElementById('uploadResults').innerHTML +=
        `<div class="alert ${alertClass} alert-dismissible fade show" role="alert">
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>`;
}

function showUploadSummary(summary) {
    const summaryHtml = `
        <div class="card mt-3">
            <div class="card-header">
                <h6>Upload Summary</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Badges Uploaded:</strong> ${summary.uploadedCount || 0}
                    </div>
                    <div class="col-md-6">
                        <strong>Failed:</strong> ${summary.failedCount || 0}
                    </div>
                </div>
                ${summary.successfulUploads && summary.successfulUploads.length > 0 ?
                    `<div class="row mt-2">
                        <div class="col-md-12">
                            <strong>Successfully uploaded:</strong> ${summary.successfulUploads.join(', ')}
                        </div>
                    </div>` : ''}
            </div>
        </div>
    `;

    document.getElementById('uploadResults').innerHTML += summaryHtml;
}

function showValidationResults(errors) {
    let resultHtml = '<div class="mt-3"><h6>Errors:</h6><div class="list-group list-group-flush">';

    errors.forEach(error => {
        resultHtml += `
            <div class="list-group-item">
                <span class="badge bg-danger me-2">Error</span>
                ${error}
            </div>
        `;
    });

    resultHtml += '</div></div>';
    document.getElementById('uploadResults').innerHTML += resultHtml;
}

// Auto-validate when file is selected
document.getElementById('yamlFile').addEventListener('change', function() {
    if (this.files.length > 0) {
        const fileName = this.files[0].name;
        if (!fileName.toLowerCase().endsWith('.yaml') && !fileName.toLowerCase().endsWith('.yml')) {
            alert('Please select a YAML file (.yaml or .yml)');
            this.value = '';
        }
    }
});
</script>
