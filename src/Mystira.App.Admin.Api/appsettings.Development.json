{
  "// ⚠️ DEVELOPMENT CONFIGURATION": "Copy credentials to appsettings.Development.local.json (gitignored) or use user secrets",
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Mystira": "Debug"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information",
        "Mystira": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/mystira-admin-api-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithEnvironmentName"]
  },
  "RequestLogging": {
    "SlowRequestThresholdMs": 5000,
    "LogHeaders": true,
    "MaxBodyLength": 8192
  },
  "ConnectionStrings": {
    "CosmosDb": "",
    "// CosmosDb_Note": "⚠️ SET VIA USER SECRETS: dotnet user-secrets set 'ConnectionStrings:CosmosDb' 'your-connection-string'",
    "AzureStorage": "",
    "// AzureStorage_Note": "⚠️ SET VIA USER SECRETS or use Azurite local emulator: UseDevelopmentStorage=true"
  },
  "Azure": {
    "CosmosDb": {
      "// UseInMemoryDatabase_Note": "Set to true for local development without Cosmos DB",
      "UseInMemoryDatabase": true,
      "DatabaseName": "MystiraAppDb"
    },
    "BlobStorage": {
      "ContainerName": "mystira-app-media",
      "MaxFileSizeMB": 10
    }
  },
  "JwtSettings": {
    "Key": "",
    "// Key_Note": "⚠️ SET VIA USER SECRETS: dotnet user-secrets set 'Jwt:Key' 'your-32-char-min-secret-key'",
    "Issuer": "mystira-admin-api-dev",
    "Audience": "mystira-admin-app-dev",
    "ExpiryMinutes": 1440
  },
  "App": {
    "MinSupportedVersion": "1.0.0",
    "LatestVersion": "1.0.0",
    "ContentVersion": "2025-05-30T12:00:00Z"
  },
  "AdminAuth": {
    "// Note": "⚠️ SET VIA USER SECRETS: dotnet user-secrets set 'AdminAuth:Password' 'your-password'",
    "Username": "admin",
    "Password": ""
  },
  "CorsSettings": {
    "AllowedOrigins": "http://localhost:7001,https://localhost:7001,http://localhost:7000,https://localhost:7000"
  }
}
