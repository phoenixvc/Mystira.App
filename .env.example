# Docker Compose Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Discord Bot Configuration (Optional - set Discord__Enabled=true to activate)
DISCORD_BOT_TOKEN=your-discord-bot-token-here
DISCORD_GUILD_ID=0

# Azure Cosmos DB Configuration
# Leave empty to use in-memory database for local development
COSMOS_DB_CONNECTION_STRING=
COSMOS_DB_NAME=MystiraAppDb

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=
BLOB_CONTAINER_NAME=mystira-app-media

# JWT Authentication Settings
# Generate a strong secret key for production!
JWT_ISSUER=mystira-app-api
JWT_AUDIENCE=mystira-app-app
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-characters-long

# Azure Communication Services (Email)
ACS_CONNECTION_STRING=
ACS_SENDER_EMAIL=
